    <application name="c2mon-test-client">
      <deployment installLocation="~/dist/c2mon-test-client">
        <directory name="conf">
          <file name="c2mon-client.properties" sourceDir="/user/timtest/rep/c2mon/client" mask="400" />
          <file name="tagids.txt" sourceDir="/user/timtest/rep/c2mon/client" mask="400" />
        </directory>
      </deployment>
      <startscript name="C2MON-TEST-CLIENT">
        <initial-heap-size>32m</initial-heap-size>
        <max-heap-size>32m</max-heap-size>
        <main-class name="cern.c2mon.client.apitest.C2monTestClient"/>
        <output>
          <file name="log/out.log" />
        </output>                         
        <property name="c2mon.client.conf.url" value="file:conf/c2mon-client.properties" />
        <property name="c2mon.log.dir" value="log" />
        <property name="log4j.configuration" value="conf/log4j.xml" />
        <property name="c2mon.client.test.tagids.location" value="conf/tagids.txt" />
        <property name="c2mon.process.name" value="${PROCESS_NAME}" />
        <property name="c2mon.client.test.subscription.number" value="${TAG_NUMBER}" />
      </startscript>
    </application>

