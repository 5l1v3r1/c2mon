<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <!-- the main Spring XML configuration file for starting up the C2MON client core context -->

  <context:component-scan base-package="cern.c2mon.client.ext.messenger"/>
  <context:annotation-config/>

  <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
    <property name="ignoreResourceNotFound" value="true" />
    <property name="location" value="${c2mon.client.conf.url}" />
    <property name="properties">
      <props>
        <!-- topic on which the c2mon client application can exchange admin messages -->
        <prop key="c2mon.client.jms.broadcast.topic">c2mon.client.broadcastmessage</prop>
      </props>
    </property>

  </bean>

  <bean id="broadcastMessageTopic" class="org.apache.activemq.command.ActiveMQTopic">
    <constructor-arg value="${c2mon.client.jms.broadcast.topic}"/>
  </bean>

  <bean id="broadcastMessageTopicName" class="java.lang.String">
    <constructor-arg value="${c2mon.client.jms.broadcast.topic}"  />
  </bean>

  <bean id="broadcastMessageTimeout" class="java.lang.Long">
    <constructor-arg value="60000"/>
  </bean>

</beans>
