<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <!-- the main Spring XML configuration file for starting up the C2MON client core context -->

  <bean id="jmsProxy" class="org.easymock.EasyMock" factory-method="createMock">
    <constructor-arg value="cern.c2mon.client.core.jms.JmsProxy"/>
  </bean>

  <bean id="coreRequestHandler" class="org.easymock.EasyMock" factory-method="createMock">
    <constructor-arg value="cern.c2mon.client.core.jms.RequestHandler"/>
  </bean>

  <bean id="supervisionManager" class="org.easymock.EasyMock" factory-method="createMock">
    <constructor-arg value="cern.c2mon.client.core.manager.CoreSupervisionManager"/>
  </bean>

  <bean id="cacheController" class="cern.c2mon.client.core.cache.CacheControllerImpl">
  </bean>

  <bean id="tagSubscriptionHandler" class="cern.c2mon.client.core.cache.TagSubscriptionHandler">
  </bean>

  <bean id="cacheSynchronizer" class="cern.c2mon.client.core.cache.CacheSynchronizerImpl">
    <constructor-arg value="jmsProxy"/>
    <constructor-arg value="requestHandler"/>
    <constructor-arg value="supervisionManager"/>
    <constructor-arg value="cacheController"/>
  </bean>

  <bean id="clientDataTagCache" class="cern.c2mon.client.core.cache.ClientDataTagCacheImpl">
    <constructor-arg value="cacheController"/>
    <constructor-arg value="cacheSynchronizer"/>
    <constructor-arg value="tagSubscriptionHandler"/>
  </bean>

  <context:component-scan base-package="cern.c2mon.client.core.service"/>
  <context:component-scan base-package="cern.c2mon.client.core.configuration"/>
  <context:annotation-config/>

  <bean id="tagManager" class="cern.c2mon.client.core.manager.TagManager">
    <constructor-arg value="tagService"/>
    <constructor-arg value="alarmService"/>
    <constructor-arg value="configurationService"/>
    <constructor-arg value="statisticsService"/>
  </bean>

  <bean id="jmsSender" class="cern.c2mon.shared.util.jms.ActiveJmsSender" />
  <bean class="cern.c2mon.client.core.configuration.ConfigurationRequestSender"/>

</beans>
