<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <!-- the main Spring XML configuration file for starting up the C2MON client core context -->

  <bean id="jmsProxy" class="org.easymock.EasyMock" factory-method="createNiceMock">
    <constructor-arg value="cern.c2mon.client.jms.JmsProxy"/>
  </bean>
  
  <bean id="requestHandler" class="org.easymock.EasyMock" factory-method="createNiceMock">
    <constructor-arg value="cern.c2mon.client.jms.RequestHandler"/>
  </bean>
  
  <bean id="supervisionManager" class="org.easymock.EasyMock" factory-method="createNiceMock">
    <constructor-arg value="cern.c2mon.client.core.manager.CoreSupervisionManager"/>
  </bean>
  
  <bean id="cacheController" class="cern.c2mon.client.core.cache.CacheControllerImpl">
  </bean>
  
  <bean id="tagSubscriptionHandler" class="cern.c2mon.client.core.cache.TagSubscriptionHandler">
  </bean>
  
  <bean id="cacheSynchronizer" class="cern.c2mon.client.core.cache.CacheSynchronizerImpl">
    <constructor-arg value="jmsProxy"/>
    <constructor-arg value="requestHandler"/>
    <constructor-arg value="supervisionManager"/>
    <constructor-arg value="cacheController"/>
  </bean>
  
  <bean id="clientDataTagCache" class="cern.c2mon.client.core.cache.ClientDataTagCacheImpl">
    <constructor-arg value="cacheController"/>
    <constructor-arg value="cacheSynchronizer"/>
    <constructor-arg value="tagSubscriptionHandler"/>
  </bean>
  
  <bean id="advancedTagService" class="cern.c2mon.client.core.service.TagServiceImpl">
    <constructor-arg value="supervisionManager"/>
    <constructor-arg value="clientDataTagCache"/>
    <constructor-arg value="requestHandler"/>
  </bean>

</beans>
