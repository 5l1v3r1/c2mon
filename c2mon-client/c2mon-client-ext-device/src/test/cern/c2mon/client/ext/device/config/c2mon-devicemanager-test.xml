<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <bean id="tagManager" class="org.easymock.EasyMock"
    factory-method="createMock">
    <constructor-arg value="cern.c2mon.client.core.C2monTagManager" />
  </bean>

  <bean id="dataTagCache" class="org.easymock.EasyMock"
    factory-method="createMock">
    <constructor-arg value="cern.c2mon.client.core.cache.BasicCacheHandler" />
  </bean>

  <bean id="deviceCache" class="org.easymock.EasyMock"
    factory-method="createMock">
    <constructor-arg value="cern.c2mon.client.ext.device.cache.DeviceCache" />
  </bean>

  <bean id="requestHandler" class="org.easymock.classextension.EasyMock"
    factory-method="createMock">
    <constructor-arg
      value="cern.c2mon.client.ext.device.request.DeviceRequestHandler" />
  </bean>

  <bean id="deviceManager" class="cern.c2mon.client.ext.device.DeviceManager">
    <constructor-arg value="deviceManager" />
  </bean>

  <!-- need these properties for tests -->
  <bean
    class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="ignoreResourceNotFound" value="true" />
    <property name="properties">
      <props>
        <prop key="c2mon.client.jms.url">c2mon.client.jms.url</prop>
        <prop key="c2mon.client.request.size">500</prop>
        <prop key="c2mon.client.request.threads.max">5</prop>
        <prop key="c2mon.client.jms.request.queue">c2mon.client.request</prop>
        <prop key="c2mon.client.jms.admin.queue">c2mon.client.admin</prop>
      </props>
    </property>
  </bean>

</beans>
