<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>cern.c2mon.c2mon-client</groupId>
    <artifactId>c2mon-client-pom</artifactId>
    <version>1.5.3</version>
  </parent>

  <groupId>cern.c2mon.c2mon-client</groupId>
  <artifactId>c2mon-client-jms</artifactId>
  <version>1.6.1-SNAPSHOT</version>
  <name>c2mon-client-jms</name>
  <packaging>jar</packaging>
  <description>The C2MON Client module handling JMS connections.</description>
  <url>http://timweb.cern.ch</url>

  <dependencies>
    <dependency>
      <groupId>javax.jms</groupId>
      <artifactId>jms</artifactId>
      <version>1.1</version>
    </dependency>
    <dependency>
      <groupId>org.apache.activemq</groupId>
      <artifactId>activemq-all</artifactId>
      <version>5.5.1-fuse-02-05</version>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-context</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-shared</groupId>
      <artifactId>c2mon-shared-client</artifactId>
      <version>[1.5.0, 2.0.0)</version>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-client</groupId>
      <artifactId>c2mon-client-common</artifactId>
      <version>[1.5.0, 2.0.0)</version>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-shared</groupId>
      <artifactId>c2mon-shared-util</artifactId>
      <version>[1.5.0, 2.0.0)</version>
    </dependency>
    <dependency>
      <groupId>cern.accsoft.commons</groupId>
      <artifactId>accsoft-commons-util</artifactId>
      <version>2.3.0</version>
    </dependency>


    <!-- test dependencies -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
    <dependency>
      <groupId>org.easymock</groupId>
      <artifactId>easymock</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-test</artifactId>
    </dependency>
  </dependencies>

  <developers />
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.8</version>
        <configuration>
          <argLine>
            <!-- for this module -->
            -Dc2mon.client.jms.url=tcp://c2mon:61620
            -Dc2mon.client.jms.user=not-used
            -Dc2mon.client.jms.password=not-used
            -Dc2mon.client.jms.supervision.topic=c2mon.JmsProxy.test.supervision.topic
            -Dc2mon.client.jms.heartbeat.topic=c2mon.JmsProxy.test.heartbeat.topic
            -Dc2mon.client.jms.alarm.topic=c2mon.JmsProxy.test.alarm.topic
            -Dc2mon.client.jms.request.queue=c2mon.JmsProxy.test.request.queue
            -Dc2mon.client.jms.adminmessage.topic=JmsProxy.test.adminmessage
            -Dc2mon.client.jms.admin.queue=c2mon.JmsProxy.test.admin.queue
            -Dc2mon.client.request.size=100
            -Dc2mon.client.request.threads.max=3
          </argLine>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <scm>
    <developerConnection>scm:svn:svn+ssh://svn/reps/tim2/trunk/c2mon/c2mon-client/c2mon-client-jms</developerConnection>
  </scm>

</project>
