<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd" >
	
	<bean id="dbDaqDao" class="cern.c2mon.driver.db.dao.DbDaqDaoImpl">
		<property name="sqlSessionFactory" ref="dbDaqSessionFactory"/>
	</bean> 

	<bean id="dbDaqSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="configLocation" value="classpath:cern/c2mon/driver/db/config/sqlmap-config.xml" />
		<property name="dataSource" ref="dbDaqDataSource" />
	</bean>

	<!-- data sources -->
    <bean id="dbDaqDataSource" destroy-method="close"
        class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="oracle.jdbc.OracleDriver" />
<!--        <property name="url" value="${timdb.url}" />-->
<!--        <property name="username" value="${timdbdaq.login}" />-->
<!--        <property name="password" value="${timdbdaq.password}" />-->
        <property name="validationQuery" value="select 1 from dual" />
        <property name="testOnBorrow" value="false" />
        <property name="testWhileIdle" value="true" />
        <property name="timeBetweenEvictionRunsMillis" value="60000" />
    </bean>

</beans>
