				<artifactId>c2mon-shared-daq</artifactId>
				<version>[1.0.0,2.0.0)</version>
			</dependency>

			<!-- Commonly used DAQ modules -->
			<dependency>
				<groupId>cern.c2mon.c2mon-daq</groupId>
				<artifactId>c2mon-daq-core</artifactId>
