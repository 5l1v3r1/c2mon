<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:c="http://www.springframework.org/schema/c" default-autowire="byName"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


	<!-- enable spring annotations scanning -->
	<context:component-scan base-package="cern.c2mon.daq.spectrum" />

	<context:mbean-export registration="ignoreExisting" />

	<context:property-placeholder ignore-resource-not-found="true" ignore-unresolvable="true" />

	<bean id="eventProc" class="cern.c2mon.daq.spectrum.SpectrumEventProcessor" >
		<property name="primaryServer" value="cs-srv-44.cern.ch" />
		<property name="secondaryServer" value="cs-srv-45.cern.ch" />
		<property name="port" value="12001" />
		<property name="tolerance" value="30" />
	</bean>


	<beans profile="PRO">
		<context:property-placeholder location="file:${almon.properties}"
			ignore-resource-not-found="true" ignore-unresolvable="true" />
		<bean id="eventListener" class="cern.c2mon.daq.spectrum.listener.SpectrumListenerJms" />

 		<bean id="jmxBootstrap" class="cern.accsoft.commons.jmxdirectory.client.JmxBootstrap">
			<constructor-arg value="cern.c2mon.daq.spectrum" />
		</bean>
<!-- 	
		The one for direct connection from the Spectrum servers to our DAQ ...	
		<bean id="eventListener" class="cern.c2mon.daq.spectrum.listener.impl.SpectrumListenerTcp" />
		... for the real production system, enable this listener. BUT is supposes that is is installed
		on the machine used as target by the Spectrum scripts!
-->
	</beans>

	<beans profile="TEST">
		<context:property-placeholder location="classpath:resources/test.properties"
			ignore-resource-not-found="true" ignore-unresolvable="true" />
		<bean id="eventListener" class="cern.c2mon.daq.spectrum.listener.SpectrumListenerJunit" />
	</beans>

</beans>