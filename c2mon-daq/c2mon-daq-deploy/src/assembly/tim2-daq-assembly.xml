<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>tim2</id>

	<formats>
		<format>tar.gz</format>
	</formats>

	<!--  do not include base directory -->
	<includeBaseDirectory>false</includeBaseDirectory>

	<componentDescriptors>
		<componentDescriptor>src/assembly/c2mon-daq-common-assembly.xml
		</componentDescriptor>
	</componentDescriptors>

	<dependencySets>

		<dependencySet>
			<outputDirectory>/lib</outputDirectory>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<fileMode>0644</fileMode>
		</dependencySet>

	</dependencySets>

	<fileSets>
		<!--  take the native libraries and copy them to /lib_so -->
		<fileSet>
			<outputDirectory>/lib_so</outputDirectory>
			<includes>
				<include>*.so</include>
			</includes>
			<directory>${project.build.directory}/lib_so/lib/i386-SLC5-gpp/shared</directory>
		</fileSet>
	</fileSets>

	<files>

		<!--  copy the configuration file -->
		<file>
			<source>${basedir}/conf/tim2-daq.conf</source>
			<outputDirectory>conf/</outputDirectory>
			<destName>daq.conf</destName>
			<lineEnding>unix</lineEnding>
			<fileMode>0444</fileMode>
		</file>
    
        <!--  copy the opc daqlist -->
        <file>
            <source>${basedir}/conf/tim2-opcdaqprocess.lst</source>
            <outputDirectory>conf/</outputDirectory>
            <destName>opcdaqprocess.lst</destName>
            <lineEnding>unix</lineEnding>
            <fileMode>0444</fileMode>
        </file>

		<!--  copy the starting script -->
		<file>
			<source>${basedir}/bin/tim2-daqprocess2.sh</source>
			<outputDirectory>bin/</outputDirectory>
			<destName>daqprocess2.sh</destName>
			<lineEnding>unix</lineEnding>
			<fileMode>0755</fileMode>
		</file>

		<!--  copy changelog -->
		<file>
			<source>${basedir}/changelog/tim2-daq-changelog.txt</source>
			<outputDirectory>/</outputDirectory>
			<destName>changelog.txt</destName>
			<lineEnding>unix</lineEnding>
			<fileMode>0444</fileMode>
		</file>

		<!--  deployment descriptor -->
		<file>
			<source>${basedir}/conf/tim2-deployment.xml</source>
			<outputDirectory>/</outputDirectory>
			<destName>deployment.xml</destName>
			<lineEnding>unix</lineEnding>
			<fileMode>0444</fileMode>
		</file>

		<!--  log4j configuration -->
		<file>
			<source>${basedir}/conf/tim2-log4j.xml</source>
			<outputDirectory>conf/</outputDirectory>
			<destName>log4j.xml</destName>
			<lineEnding>unix</lineEnding>
			<fileMode>0444</fileMode>
		</file>

	</files>

</assembly>
