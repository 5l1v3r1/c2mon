<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
   <parent>
        <groupId>cern.c2mon.c2mon-daq</groupId>
	    <artifactId>c2mon-daq-deploy</artifactId>	    
        <version>1.0.1-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>	

	<groupId>cern.c2mon.c2mon-daq</groupId>
	<artifactId>c2mon-daq-dmn2</artifactId>
	<name>The DMN2 DAQ module</name>
	<version>1.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>

	<description>
		C2MON DAQ assembling all required modules and configuration files for DMN2
    </description>
	<url></url>
 
	<dependencies>
		<dependency>
			<groupId>cern.tim2.tim2-daq</groupId>
			<artifactId>tim2-daq-core</artifactId>			
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-daq</groupId>
			<artifactId>tim2-daq-jmx</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-daq</groupId>
			<artifactId>tim2-daq-japc</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-daq</groupId>
			<artifactId>tim2-daq-testhandler</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-daq</groupId>
			<artifactId>tim2-daq-ssh</artifactId>
		</dependency>										
	</dependencies>

	<developers />
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>

					<descriptors>
						<descriptor>src/assembly/dmn2-daq-assembly.xml</descriptor>						
					</descriptors>

				</configuration>
				<executions>
					<execution>
						<id>create-assembly-file</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
			
</project>
