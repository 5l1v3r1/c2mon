      <bean class="cern.c2mon.server.shorttermlog.alarm.AlarmListener"/>
    </constructor-arg>
    <constructor-arg><bean class="cern.c2mon.server.eslog.structure.types.SupervisionES"/></constructor-arg>
  </bean>

  <bean id="tagNumericESPersistenceManager" class="cern.c2mon.pmanager.persistence.impl.TimPersistenceManager">
    <constructor-arg ref="tagIndexer"/>
    <constructor-arg value="${c2mon.home}/log/tagNumericESfallback.txt"/>
