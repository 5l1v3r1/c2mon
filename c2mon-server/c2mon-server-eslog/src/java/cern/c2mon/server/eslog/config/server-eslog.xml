                      http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <context:annotation-config />
  <context:component-scan base-package="cern.c2mon.server.eslog" />

  <bean id="alarmESPersistenceManager" class="cern.c2mon.pmanager.persistence.impl.TimPersistenceManager">
    <constructor-arg ref="alarmIndexer"/>
    <constructor-arg value="${c2mon.home}/log/alarmESfallback.txt"/>
    <constructor-arg>
      <bean class="cern.c2mon.server.shorttermlog.alarm.AlarmListener"/>
    </constructor-arg>
    <constructor-arg><bean class="cern.c2mon.server.eslog.structure.types.AlarmES"/></constructor-arg>
  </bean>

  <bean id="supervisionESPersistenceManager" class="cern.c2mon.pmanager.persistence.impl.TimPersistenceManager">
