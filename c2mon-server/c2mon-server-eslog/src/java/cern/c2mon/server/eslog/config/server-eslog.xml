<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                      http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <context:annotation-config />
  <context:component-scan base-package="cern.c2mon.server.eslog" />

  <bean id="esSupervisionEventPersistenceManager" class="cern.c2mon.pmanager.persistence.impl.TimPersistenceManager">
    <constructor-arg ref="esSupervisionEventIndexer"/>
    <constructor-arg value="${c2mon.server.home}/log/supervisionESfallback.txt"/>
    <constructor-arg>
      <bean class="cern.c2mon.server.eslog.alarm.DummyEsAlarmListener"/>
    </constructor-arg>
    <constructor-arg><bean class="cern.c2mon.server.eslog.structure.types.EsSupervisionEvent"/></constructor-arg>
  </bean>

  <bean id="esAlarmPersistenceManager" class="cern.c2mon.pmanager.persistence.impl.TimPersistenceManager">
    <constructor-arg ref="esAlarmIndexer"/>
    <constructor-arg value="${c2mon.server.home}/log/alarmESfallback.txt"/>
    <constructor-arg>
      <bean class="cern.c2mon.server.eslog.alarm.DummyEsAlarmListener"/>
    </constructor-arg>
    <constructor-arg><bean class="cern.c2mon.server.eslog.structure.types.EsAlarm"/></constructor-arg>
  </bean>

  <bean id="esTagNumericPersistenceManager" class="cern.c2mon.pmanager.persistence.impl.TimPersistenceManager">
    <constructor-arg ref="esTagIndexer"/>
    <constructor-arg value="${c2mon.server.home}/log/tagNumericESfallback.txt"/>
    <constructor-arg>
      <bean class="cern.c2mon.server.eslog.alarm.EsAlarmListener"/>
    </constructor-arg>
    <constructor-arg><bean class="cern.c2mon.server.eslog.structure.types.EsTagNumeric"/></constructor-arg>
  </bean>

  <bean id="esTagStringPersistenceManager" class="cern.c2mon.pmanager.persistence.impl.TimPersistenceManager">
    <constructor-arg ref="esTagIndexer"/>
    <constructor-arg value="${c2mon.server.home}/log/tagStringESfallback.txt"/>
    <constructor-arg>
      <bean class="cern.c2mon.server.eslog.alarm.DummyEsAlarmListener"/>
    </constructor-arg>
    <constructor-arg><bean class="cern.c2mon.server.eslog.structure.types.EsTagString"/></constructor-arg>
  </bean>

  <bean id="esTagBooleanPersistenceManager" class="cern.c2mon.pmanager.persistence.impl.TimPersistenceManager">
    <constructor-arg ref="esTagIndexer"/>
    <constructor-arg value="${c2mon.server.home}/log/tagBooleanESfallback.txt"/>
    <constructor-arg>
      <bean class="cern.c2mon.server.eslog.alarm.DummyEsAlarmListener"/>
    </constructor-arg>
    <constructor-arg><bean class="cern.c2mon.server.eslog.structure.types.EsTagBoolean"/></constructor-arg>
  </bean>

</beans>
