<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>cern.c2mon.server</groupId>
    <artifactId>distribution</artifactId>
    <version>1.8.41-SNAPSHOT</version>
  </parent>

  <artifactId>docker</artifactId>
  <name>c2mon-server :: docker image</name>
  <packaging>ear</packaging>

  <properties>
    <registry>registry.hub.docker.com</registry>
    <docker.image.base>openjdk:8-jdk</docker.image.base>
    <c2mon.home>/c2mon-server-${project.version}</c2mon.home>
  </properties>

  <build>
    <!-- Overriding this so jib doesn't crash for missing folder -->
    <outputDirectory>${project.build.directory}/dependency-maven-plugin-markers</outputDirectory>

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.10</version>
        <executions>
          <execution>
            <id>unpack</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>cern.c2mon.server</groupId>
                  <artifactId>c2mon-server</artifactId>
                  <type>tar.gz</type>
                </artifactItem>
              </artifactItems>
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>true</overWriteSnapshots>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>com.google.cloud.tools</groupId>
        <artifactId>jib-maven-plugin</artifactId>
        <version>1.0.2</version>
        <executions>
          <execution>
            <phase>deploy</phase>
            <id>build</id>
            <goals>
              <goal>build</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <from>
            <image>${docker.image.base}</image>
          </from>
          <to>
            <image>${registry}/cernoss/c2mon</image>
            <tags>
              <tag>${project.version}</tag>
              <tag>latest</tag>
            </tags>
          </to>
          <container>
            <useCurrentTimestamp>true</useCurrentTimestamp>
            <ports>
              <port>61616</port>
              <port>9200</port>
              <port>9001</port>
              <port>1099</port>
            </ports>
            <environment>
              <_JAVA_OPTIONS>-Dc2mon.server.elasticsearch.home=/c2mon-server/elasticsearch</_JAVA_OPTIONS>
              <C2MON_HOME>${c2mon.home}</C2MON_HOME>
            </environment>
            <workingDirectory>${c2mon.home}</workingDirectory>
            <volumes>
              <volume>/log</volume>
              <volume>/conf</volume>
              <volume>/elasticsearch</volume>
            </volumes>
            <entrypoint>
              <entrypoint>bin/c2mon.sh</entrypoint>
              <entrypoint>run</entrypoint>
            </entrypoint>
          </container>
          <extraDirectory>
            <path>${project.build.directory}/dependency</path>
            <permissions>
              <permission>
                <file>${c2mon.home}/bin/c2mon.sh</file>
                <mode>755</mode>
              </permission>
              <permission>
                <file>${c2mon.home}/bin/C2MON-SRV.jvm</file>
                <mode>755</mode>
              </permission>
            </permissions>
          </extraDirectory>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-install-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
