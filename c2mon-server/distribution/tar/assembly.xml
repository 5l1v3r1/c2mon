<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>demo</id>

  <formats>
    <format>tar.gz</format>
  </formats>

  <!-- do not include base directory -->
  <includeBaseDirectory>false</includeBaseDirectory>

  <dependencySets>
  <dependencySet>
   <outputDirectory>/lib</outputDirectory>
   <fileMode>0644</fileMode>
   <useProjectArtifact>false</useProjectArtifact>
  </dependencySet>
 </dependencySets>

 <!-- create default tmp, log and reports folders in the assembly -->
 <fileSets>
  <fileSet>
   <directory>./</directory>
   <outputDirectory>/tmp</outputDirectory>
   <excludes>
    <exclude>*/**</exclude>
   </excludes>
  </fileSet>
  <fileSet>
   <directory>./</directory>
   <outputDirectory>/reports</outputDirectory>
   <excludes>
    <exclude>*/**</exclude>
   </excludes>
  </fileSet>
  <fileSet>
   <directory>./</directory>
   <outputDirectory>/log</outputDirectory>
   <excludes>
    <exclude>*/**</exclude>
   </excludes>
  </fileSet>
  <!-- copy the start scripts -->
    <fileSet>
      <outputDirectory>/bin</outputDirectory>
      <includes>
        <include>*</include>
      </includes>
      <directory>bin/</directory>
      <fileMode>0755</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
 </fileSets>

  <files>
    <!-- Copy configuration files -->
    <file>
      <source>${basedir}/conf/c2mon-demo.properties</source>
      <outputDirectory>conf/</outputDirectory>
      <destName>c2mon.properties</destName>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>
    <file>
      <source>${basedir}/conf/logback.xml</source>
      <outputDirectory>conf/</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>

    <!-- copy the version file -->
    <file>
      <source>${project.build.outputDirectory}/version.txt</source>
      <outputDirectory>/</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>
    
    <!-- copy the Third Party license file -->
    <file>
      <source>${project.build.outputDirectory}/THIRD-PARTY.txt</source>
      <outputDirectory>/</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>

  </files>

</assembly>
