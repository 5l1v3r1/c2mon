<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
  "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="cern.c2mon.server.cache.dbaccess.DeviceMapper">

  <resultMap id="deviceResultMap" type="cern.c2mon.server.common.device.DeviceCacheObject">
    <id property="id" column="device_id"/>
    <result property="name" column="device_name"/>
    <result property="deviceClassId" column="device_class_id"/>
  </resultMap>

  <resultMap id="propertyValueResult" type="cern.c2mon.server.common.device.PropertyValue" >
    <id property="name" column="name" javaType="String" />
    <result property="tagId" column="tagId" javaType="Long" />
  </resultMap>
  
  <resultMap id="commandValueResult" type="cern.c2mon.server.common.device.CommandValue" >
    <id property="name" column="name" javaType="String" />
    <result property="tagId" column="tagId" javaType="Long" />
  </resultMap>

  <!-- getAll needed for persistent caches -->
  <select id="getAll" resultMap="deviceResultMap">
    SELECT DEVICE.DEVID as device_id,
           DEVICE.DEVNAME as device_name,
           DEVICE.DEVCLASSID as device_class_id
<!--            PROPERTYVALUE.PROPNAME as property_name,
           PROPERTYVALUE.PROPVAL_TAGID as property_tagid,
           COMMANDVALUE.CMDNAME as command_name,
           COMMANDVALUE.CMDVAL_TAGID as command_tagid -->
      FROM DEVICE 
<!--            LEFT OUTER JOIN PROPERTYVALUE
        ON DEVICE.DEVID = PROPERTYVALUE.DEVID
           INNER JOIN COMMANDVALUE
        ON DEVICE.DEVID = COMMANDVALUE.DEVID -->
  </select>

  <!-- getItem needed for persistence caches -->
  <select id="getItem" resultMap="deviceResultMap" parameterType="Long">
    SELECT DEVICE.DEVID as device_id,
           DEVICE.DEVNAME as device_name,
           DEVICE.DEVCLASSID as device_class_id
           <!-- PROPERTYVALUE.PROPNAME as property_name,
           PROPERTYVALUE.PROPVAL_TAGID as property_tagid,
           COMMANDVALUE.CMDNAME as command_name,
           COMMANDVALUE.CMDVAL_TAGID as command_tagid -->
      FROM DEVICE 
           <!-- LEFT OUTER JOIN PROPERTYVALUE
        ON DEVICE.DEVID = PROPERTYVALUE.DEVID
           INNER JOIN COMMANDVALUE
        ON DEVICE.DEVID = COMMANDVALUE.DEVID -->
     WHERE DEVICE.DEVID = #{id}
  </select>

  <select id="getPropertyValuesForDevice" parameterType="Long" resultMap="propertyValueResult">
    SELECT PROPNAME as name, PROPVAL_TAGID as tagId 
      FROM PROPERTYVALUE 
     WHERE PROPERTYVALUE.DEVID = #{id}
  </select>
  
  <select id="getCommandValuesForDevice" parameterType="Long" resultMap="commandValueResult">
    SELECT CMDNAME as name, CMDVAL_TAGID as tagId 
      FROM COMMANDVALUE 
     WHERE COMMANDVALUE.DEVID = #{id}
  </select>

  <insert id="insertDevice"
    parameterType="cern.c2mon.server.common.device.DeviceCacheObject">
    INSERT INTO DEVICE
    (DEVID, DEVNAME, DEVCLASSID)
    VALUES (#{id}, #{name}, #{deviceClassId})
  </insert>

  <update id="updateDeviceConfig" parameterType="cern.c2mon.server.common.device.Device">
    UPDATE DEVICE
       SET DEVNAME = #{name},
           DEVCLASSID = #{deviceClassId}
     WHERE DEVID = #{id}
  </update>

  <select id="getMaxId" resultType="Long">
    SELECT MAX(DEVID)
    FROM DEVICE
  </select>

  <select id="getMinId" resultType="Long">
    SELECT MIN(DEVID)
    FROM DEVICE
  </select>

  <select id="isInDb" resultType="boolean" parameterType="Long">
    SELECT
    count(*)
    FROM DEVICE
    WHERE DEVID = #{id}
  </select>

  <delete id="deleteDevice" parameterType="Long">
    DELETE FROM DEVICE WHERE DEVID = #{id}
  </delete>

  <delete id="deletePropertyValues" parameterType="Long">
    DELETE FROM PROPERTYVALUE WHERE DEVID = #{id}
  </delete>

  <delete id="deleteCommandValues" parameterType="Long">
    DELETE FROM COMMANDVALUE WHERE DEVID = #{id}
  </delete>

</mapper>