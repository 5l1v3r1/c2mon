  <scm>
    <developerConnection>scm:svn:svn+ssh://svn.cern.ch/reps/tim2/trunk/c2mon/c2mon-server/c2mon-server-lifecycle</developerConnection>
  </scm>

  <build>
    <resources>
      <resource>
        <!--
        This is required for Spring to be able to find resources. If we were using a standard directory layout (i.e. /src/main/resources)
        then we wouldn't need this extra configuration.
        -->
        <directory>src/resources</directory>
      </resource>
    </resources>
  </build>

