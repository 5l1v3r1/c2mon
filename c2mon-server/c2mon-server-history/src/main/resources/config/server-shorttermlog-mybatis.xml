<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="historyTransactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
    <property name="dataSource" ref="historyDataSource"/>
  </bean>

  <bean id="historySqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
    <property name="configLocation" value="classpath:mybatis/history/sql-map-config.xml"/>
    <property name="dataSource" ref="historyDataSource"/>
    <property name="databaseIdProvider" ref="databaseIdProvider"/>
  </bean>

  <bean id="supervisionMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
    <property name="sqlSessionFactory" ref="historySqlSessionFactory"/>
    <property name="mapperInterface" value="cern.c2mon.server.history.mapper.SupervisionMapper"/>
  </bean>

  <bean id="serverLifecycleLogMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
    <property name="sqlSessionFactory" ref="historySqlSessionFactory"/>
    <property name="mapperInterface" value="cern.c2mon.shared.client.lifecycle.ServerLifecycleMapper"/>
  </bean>

  <bean id="vendorProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
    <property name="properties">
      <props>
        <prop key="HSQL">oracle</prop>
        <prop key="H2">h2</prop>
        <prop key="Oracle">oracle</prop>
        <prop key="MySQL">mysql</prop>
      </props>
    </property>
  </bean>

  <bean id="databaseIdProvider" class="org.apache.ibatis.mapping.VendorDatabaseIdProvider">
    <property name="properties" ref="vendorProperties"/>
  </bean>

</beans>
