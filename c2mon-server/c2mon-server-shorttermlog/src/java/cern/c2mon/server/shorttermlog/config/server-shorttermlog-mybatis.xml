<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	                    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
  
  <bean id="stlTransactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
    <property name="dataSource" ref="stlDataSource"/>
  </bean>
	
	<bean id="stlSqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
	  <property name="configLocation" value="classpath:cern/c2mon/server/shorttermlog/sqlmap/sql-map-config.xml"/>
	  <property name="dataSource" ref="stlDataSource"/>    
	</bean>

  <bean id="supervisionMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
    <property name="sqlSessionFactory" ref="stlSqlSessionFactory"/>        
    <property name="mapperInterface" value="cern.c2mon.server.shorttermlog.mapper.SupervisionMapper"/>
  </bean>
  
  <bean id="serverLifecycleLogMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
    <property name="sqlSessionFactory" ref="stlSqlSessionFactory"/>
    <property name="mapperInterface" value="cern.c2mon.shared.client.lifecycle.ServerLifecycleMapper"/>
  </bean>
  
</beans>
