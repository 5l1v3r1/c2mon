<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	                    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

  
  <bean id="vsfTransactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
    <property name="dataSource" ref="cacheDataSource"/>
  </bean>
	
	<bean id="vsfSqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
	  <property name="configLocation" value="classpath:cern/c2mon/server/video/sqlmap/SqlMapVideoConfig.xml"/>
	  <property name="dataSource" ref="cacheDataSource"/>    
	</bean>

  <bean id="videoConnectionMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
    <property name="sqlSessionFactory" ref="vsfSqlSessionFactory"/>        
    <property name="mapperInterface" value="cern.c2mon.server.video.VideoConnectionMapper"/>
  </bean>
  
</beans>
