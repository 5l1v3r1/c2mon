<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>cern.tim2.tim2-server</groupId>
    <artifactId>tim2-server-pom</artifactId>
    <version>1.0.11</version>
  </parent>
  <groupId>cern.c2mon.c2mon-server</groupId>
  <artifactId>c2mon-server-client</artifactId>
  <version>1.0.14-SNAPSHOT</version>
  <name>c2mon-server-client</name>
  <packaging>jar</packaging>
  <description>The TIM2 server Client module handles the communication to the client layer API.</description>
  <url>http://timweb.cern.ch</url>

  <scm>
    <developerConnection>scm:svn:svn+ssh://svn.cern.ch/reps/tim2/trunk/c2mon/c2mon-server/c2mon-server-client</developerConnection>
  </scm>
  
  <dependencies>
    <dependency>
      <groupId>org.jencks</groupId>
      <artifactId>jencks-amqpool</artifactId>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-context</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.tim2.tim2-server</groupId>
      <artifactId>tim2-server-alarm</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-configuration</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.tim2.tim2-server</groupId>
      <artifactId>tim2-server-cache</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.tim2.tim2-server</groupId>
      <artifactId>tim2-server-common</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.tim2.tim2-server</groupId>
      <artifactId>tim2-server-supervision</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.tim2.tim2-shared</groupId>
      <artifactId>tim2-shared-client</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.tim2.tim2-shared</groupId>
      <artifactId>tim2-shared-util</artifactId>
    </dependency>

    <!-- test only -->
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-test</artifactId>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
    <dependency>
      <groupId>org.easymock</groupId>
      <artifactId>easymock</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.tim2.tim2-server</groupId>
      <artifactId>tim2-server-test</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.tim2.tim2-server</groupId>
      <artifactId>tim2-server-daqcommunication-in</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>cern.tim2.tim2-server</groupId>
      <artifactId>tim2-server-daqcommunication-out</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
    	<groupId>cern.tim2.tim2-server</groupId>
    	<artifactId>tim2-server-command</artifactId>    	
    </dependency>
    <dependency>
        <groupId>org.apache.activemq</groupId>
        <artifactId>activemq-all</artifactId>
      </dependency>
  </dependencies>

  <developers />
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.8</version>
        <configuration>
          <argLine>
            -Dc2mon.properties.location=${c2mon.properties.location}
            
            <!--
              module properties
            -->
            -Djms.client.user=not-used
            -Djms.client.password=not-used           
            -Djms.client.supervision.topic=tim.client.supervision.test
            -Djms.client.request.queue=tim.client.request.test
            -Dc2mon.jms.client.consumers.min=1
            -Dc2mon.jms.client.consumers.max=2    
            
            <!--
              server core properties for integration testing
            -->
            -Ddatasource.persistence.connections.initial=2
            -Ddatasource.persistence.connections.max=2
            -Dcache.loader.batch.size=10000
            -Dcache.loader.threads.max=2
            -Dcache.loader.queue.size=1000
            -Dcache.loader.equipment.batch.size=5
            -Dcache.loader.equipment.threads.max=2
            -Dcache.loader.equipment.queue.size=1000  

            <!-- supervision -->
            -Dc2mon.heartbeat.interval=60000
            -Dc2mon.jms.heartbeat.topic=test.tim.sys.hearbeat
            -Dc2mon.jms.heartbeat.user=not-used
            -Dc2mon.jms.heartbeat.password=not-used  
            
            <!-- alarm topic -->
            -Djms.client.alarm.topic=tim.client.alarm        
              
            <!--
              daq communication in
            -->
            -Djms.daq.in.connections=1
            -Djms.update.consumers.max=1
            -Djms.update.consumers.initial=1
            -Djms.update.consumers.warmuptime=1
            -Dc2mon.jms.daqin.connections.max=1
            -Djms.process.updateQueueTrunk=test.tim.process.update
            -Djms.update.transacted=true
            -Djms.process.requestQueue=test.tim.process.request
            -Djms.request.connections.max=1
            -Djms.request.consumers.initial=1
            -Djms.request.consumers.max=1
            -Djms.request.transacted=false
            -Dc2mon.jms.update.task.idle.limit=1
            -Dc2mon.jms.update.task.max.messages=1
            -Dc2mon.jms.update.executor.threads=1
            -Dc2mon.jms.update.task.timeout=50  

            <!-- daq out -->
            -Djms.daq.out.connections=1
          </argLine>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>