<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>cern.c2mon.c2mon-server</groupId>
    <artifactId>c2mon-server-pom</artifactId>
    <version>RELEASE</version>
  </parent>

  <groupId>cern.c2mon.c2mon-server</groupId>
  <artifactId>c2mon-server-client</artifactId>
  <version>1.6.2</version>
  <name>c2mon-server-client</name>
  <packaging>jar</packaging>
  <description>The C2MON server Client module handles the communication to the client layer API.</description>
  <url>http://timweb.cern.ch</url>

  <scm>
    <developerConnection>scm:svn:svn+ssh://svn.cern.ch/reps/tim2/trunk/c2mon/c2mon-server/c2mon-server-client</developerConnection>
  </scm>

  <dependencies>
    <dependency>
      <groupId>org.jencks</groupId>
      <artifactId>jencks-amqpool</artifactId>
    </dependency>
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <version>1.16.6</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-context</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-alarm</artifactId>
      <version>[1.5.0, 2.0.0)</version>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-all</artifactId>
    </dependency>

    <!-- test only -->
    <dependency>
      <groupId>net.sf.ehcache</groupId>
      <artifactId>ehcache-core</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-test</artifactId>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
    <dependency>
      <groupId>org.easymock</groupId>
      <artifactId>easymock</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-test</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-command</artifactId>
      <version>[1.5.0, 2.0.0)</version>
    </dependency>
    <dependency>
      <groupId>org.apache.activemq</groupId>
      <artifactId>activemq-all</artifactId>
    </dependency>
  </dependencies>

  <developers />
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.8</version>
        <configuration>
          <argLine>
            -Dc2mon.properties.location=${c2mon.properties.location}
            -Dc2mon.log.dir=${basedir}/build/log

            <!-- module properties -->
            -Djms.client.user=not-used
            -Djms.client.password=not-used
            -Djms.client.supervision.topic=tim.client.supervision.test
            -Djms.client.request.queue=tim.client.request.test
            -Dc2mon.jms.client.consumers.min=1
            -Dc2mon.jms.client.consumers.max=2

            <!-- server core properties for integration testing -->
            -Ddatasource.persistence.connections.initial=2
            -Ddatasource.persistence.connections.max=2
            -Dcache.loader.batch.size=10000
            -Dcache.loader.threads.max=2
            -Dcache.loader.queue.size=1000
            -Dcache.loader.equipment.batch.size=5
            -Dcache.loader.equipment.threads.max=2
            -Dcache.loader.equipment.queue.size=1000

            <!-- supervision -->
            -Dc2mon.heartbeat.interval=60000
            -Dc2mon.jms.heartbeat.topic=test.tim.sys.hearbeat
            -Dc2mon.jms.heartbeat.user=not-used
            -Dc2mon.jms.heartbeat.password=not-used

            <!-- alarm topic -->
            -Djms.client.alarm.topic=tim.client.alarm

            <!-- daq communication in -->
            -Djms.daq.in.connections=1
            -Djms.update.consumers.max=1
            -Djms.update.consumers.initial=1
            -Djms.update.consumers.warmuptime=1
            -Dc2mon.jms.daqin.connections.max=1
            -Djms.update.transacted=true
            -Dc2mon.jms.daq.queue.trunk=test.tim.process
            -Djms.request.connections.max=1
            -Djms.request.consumers.initial=1
            -Djms.request.consumers.max=1
            -Djms.request.transacted=false
            -Dc2mon.jms.update.task.idle.limit=1
            -Dc2mon.jms.update.task.max.messages=1
            -Dc2mon.jms.update.executor.threads=1
            -Dc2mon.jms.update.task.timeout=50

            <!-- daq out -->
            -Djms.daq.out.connections=1
          </argLine>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>