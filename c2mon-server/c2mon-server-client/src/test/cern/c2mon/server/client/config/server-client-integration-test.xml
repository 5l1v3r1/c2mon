<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	                    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <!-- integration test of client module -->
  
  <!-- start server core in test mode -->
  <import resource="classpath:cern/c2mon/server/test/core/config/server-core-test.xml"/>
  
  <!-- also needs alarm module -->
  <import resource="classpath:cern/c2mon/server/alarm/config/server-alarm.xml"/>
  
  <bean id="control" class="org.easymock.EasyMock" factory-method="createControl"/>    
  
  <bean id="configurationLoader" factory-bean="control" factory-method="createMock">  
  	<constructor-arg>
  		<value>cern.c2mon.server.configuration.ConfigurationLoader</value>
  	</constructor-arg>
  </bean>
  
   <bean id="configurationUpdate" factory-bean="control" factory-method="createMock">  
    <constructor-arg>
        <value>cern.c2mon.server.configuration.ConfigurationUpdate</value>
    </constructor-arg>
  </bean>
  
  
  <bean id="commandExecutionManager" factory-bean="control" factory-method="createMock">
  	<constructor-arg>
  		<value>cern.c2mon.server.command.CommandExecutionManager</value>
  	</constructor-arg>
  </bean>
  
  <!-- start module -->
  <import resource="classpath:cern/c2mon/server/client/config/server-client.xml"/>
  
  
</beans>
