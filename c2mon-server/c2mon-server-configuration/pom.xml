<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
 
  <parent>
    <groupId>cern.c2mon.c2mon-server</groupId>
    <artifactId>c2mon-server-pom</artifactId>
    <version>LATEST</version>
  </parent>
 
  <version>1.5.4</version>
  <name>c2mon-server-configuration</name>
  <artifactId>c2mon-server-configuration</artifactId>
  <packaging>jar</packaging>
  <description>C2MON server configuration module implementing cache runtime reconfiguration functionality</description>
  <url>http://timweb.cern.ch</url>

  <scm>
    <developerConnection>scm:svn:svn+ssh://svn.cern.ch/reps/tim2/trunk/c2mon/c2mon-server/c2mon-server-configuration</developerConnection>
  </scm>
  
  <dependencies>
    <!-- test dependencies -->
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
    <dependency>
      <groupId>org.easymock</groupId>
      <artifactId>easymock</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-test</artifactId>
    </dependency>

    <!-- 3rd party -->
    <dependency>
      <groupId>oracle</groupId>
      <artifactId>ojdbc</artifactId>
    </dependency>
    <dependency>
      <groupId>oracle</groupId>
      <artifactId>orai18n</artifactId>
    </dependency>
    <dependency>
      <groupId>org.mybatis</groupId>
      <artifactId>mybatis-spring</artifactId>
    </dependency>
    <dependency>
      <groupId>commons-dbcp</groupId>
      <artifactId>commons-dbcp</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.activemq</groupId>
      <artifactId>activemq-all</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-beans</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-context</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-jms</artifactId>
    </dependency>

    <!-- C2MON server dependencies -->
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-cache</artifactId>
      <version>LATEST</version> 
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-common</artifactId>
      <version>LATEST</version> 
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-daqcommunication-out</artifactId>
      <version>LATEST</version> 
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-rule</artifactId>
      <version>LATEST</version> 
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-daqcommunication-in</artifactId>
      <version>LATEST</version> 
    </dependency>
    
    <!-- C2MON test dependencies -->
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-test</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>    
        <version>2.8.1</version>  
        <configuration>
          <argLine>
            -Dc2mon.properties.location=${c2mon.properties.location}
            -Dc2mon.log.dir=${basedir}/build/log
            <!-- Terracotta license key path -->
            -Dcom.tc.productkey.path=${com.tc.productkey.path}
            -Ddatasource.config.connections.initial=1
            -Ddatasource.config.connections.max=2
            -Djms.config.destination=tim.config.test
            -Dc2mon.server.config.daq.enabled=true
            -Dc2mon.server.config.running.process.removal=false
            <!-- cache module properties for integration testing -->
            -Ddatasource.persistence.connections.initial=2
            -Ddatasource.persistence.connections.max=10
            -Dc2mon.jms.controltag.publication.topic=c2mon.controltag.publication.test
            -Dc2mon.jms.tag.publication.topic=c2mon.tag.publication.test
            -Dcache.loader.batch.size=10000
            -Dcache.loader.threads.max=2
            -Dcache.loader.queue.size=1000
            -Dcache.loader.equipment.batch.size=5
            -Dcache.loader.equipment.threads.max=2
            -Dcache.loader.equipment.queue.size=1000     
          </argLine>
        </configuration>
      </plugin>
      
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
          <configuration>
            <!-- Disable doclint (which comes with Java 8) as it is very strict with javadoc and causes build failures. -->
            <!-- TODO: Fix all the javadoc so we can re-enable doclint. -->
          <additionalparam>-Xdoclint:none</additionalparam>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <developers />
</project>
