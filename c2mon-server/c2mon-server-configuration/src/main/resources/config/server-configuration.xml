<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <context:annotation-config/>
  <context:component-scan base-package="cern.c2mon.server.configuration"/>

  <!-- datasource itself is included in the c2mon-datasource.xml file in the deployment configuration directory -->
  <import resource="classpath:config/server-configuration-mybatis.xml"/>

  <bean id="configurationLoader" class="cern.c2mon.server.configuration.impl.ConfigurationLoaderImpl">
    <property name="daqConfigEnabled" value="${c2mon.server.configuration.daqConfigEnabled}"/>
    <property name="reportDirectory" value="${c2mon.server.home}/reports"/>
  </bean>

  <bean id="configurationRequestConverter" class="cern.c2mon.shared.client.configuration.ConfigurationRequestConverter" init-method="init"/>

</beans>
