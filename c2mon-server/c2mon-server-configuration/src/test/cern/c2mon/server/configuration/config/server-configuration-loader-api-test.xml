<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

  <!-- test beans for the Configuration Loader -->
  <import resource="classpath:cern/c2mon/server/configuration/config/server-configuration-test.xml" />

  <!-- some Mybatis beans -->
  <import resource="classpath:cern/c2mon/server/configuration/config/server-configuration-mybatis.xml" />

  <!-- choose the configuration below to run against the Oracle or HSQLDB configuration schema -->
  <!-- for Oracle, uncomment the data creation/removal lines in the ConfigurationLoaderTest class -->
  <!--  <import resource="classpath:cern/c2mon/server/configuration/config/server-configuration-oracle.xml" />-->
  <import resource="classpath:cern/c2mon/server/configuration/config/server-configuration-hsqldb.xml"/>

  <!-- choose the configuration below to run against the Oracle or HSQLDB cache schema 
  <import resource="classpath:cern/c2mon/server/test/cache/config/server-test-datasource-hsqldb.xml"/>
  -->
  <!--<import resource="classpath:cern/c2mon/server/test/cache/config/server-test-datasource-hsqldb.xml" />-->

  <jdbc:embedded-database id="cacheDataSource">
    <jdbc:script location="classpath:cern/c2mon/server/test/sql/cache-schema-generic.sql"/>
  </jdbc:embedded-database>

  <!-- import properties -->
  <import resource="classpath:cern/c2mon/server/test/server-test-properties.xml" />

  <context:annotation-config />
  <context:component-scan base-package="cern.c2mon.server.configuration.api" />
</beans>
