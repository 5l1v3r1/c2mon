<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	                    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
  
  <!-- top-level XML for the daq-in module; should be loaded to start the module -->
  
  <context:annotation-config/>
  <context:component-scan base-package="cern.c2mon.server.daqcommunication.in"/>
    
  <!-- import the different connection details -->
  <import resource="classpath:cern/c2mon/server/daqcommunication/in/config/server-daqcommunication-in-connection.xml"/>
  <import resource="classpath:cern/c2mon/server/daqcommunication/in/config/server-daqcommunication-in-update.xml"/>
  <import resource="classpath:cern/c2mon/server/daqcommunication/in/config/server-daqcommunication-in-request.xml"/>

</beans>
