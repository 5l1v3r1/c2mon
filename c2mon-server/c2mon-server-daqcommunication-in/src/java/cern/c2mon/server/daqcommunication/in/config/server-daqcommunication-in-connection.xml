<!--    <property name="userName" value="${jms.daq.in.user}"/>-->
<!--    <property name="password" value="${jms.daq.in.password}"/>-->
    <property name="clientIDPrefix" value="C2MON-SERVER-DAQ-IN"/>
    <property name="watchTopicAdvisories" value="false"/> 
  </bean>

