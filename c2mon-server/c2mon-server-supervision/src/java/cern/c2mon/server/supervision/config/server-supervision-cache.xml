<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
  
  <!-- 
    Both caches are used by the SupervisionTagNotifier. The Ehcache configuration itself is kept
    in the c2mon-server-cache repository. The caches are used to filter out older supervision
    events, to prevent overtaking of DOWN and UP events for a given tag.
    
    The reason of using Ehcache instead of a simple Map is that we want to be able to share it 
    over the cluster. Please note, that no initial content loading is required.
  -->
  
  <bean id="processEventEhcache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
    <property name="cacheManager" ref="cacheManager"/>
    <property name="cacheName" value="processEventCache"/>
  </bean>
  
  <bean id="equipmentEventEhcache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
    <property name="cacheManager" ref="cacheManager"/>
    <property name="cacheName" value="equipmentEventCache"/>
  </bean>
  
  <bean id="processEventCache" class="cern.c2mon.server.cache.common.DefaultCacheImpl">
    <constructor-arg ref="processEventEhcache"/>
  </bean>
  
  <bean id="equipmentEventCache" class="cern.c2mon.server.cache.common.DefaultCacheImpl">
    <constructor-arg ref="equipmentEventEhcache"/>
  </bean>
</beans>
