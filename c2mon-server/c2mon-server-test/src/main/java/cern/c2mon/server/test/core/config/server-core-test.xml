<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	                    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <!-- 
  
  Spring configuration file starting up the C2MON server core for integration testing with other modules.
  Imports c2mon.properties for use in XML configuration files.
  Simply import this file into your configuration XML. Required properties need including in pom.xml.
  Uses a in-memory HSQLDB for the cache datasource.
  -->
  
  <import resource="classpath:cern/c2mon/server/cache/config/server-cache-nonpersistent-server.xml"/>
  <import resource="classpath:cern/c2mon/server/cache/dbaccess/config/server-cachedbaccess-common.xml"/>
  <import resource="classpath:cern/c2mon/server/test/cache/config/server-test-datasource-hsqldb.xml"/>   
  <import resource="classpath:cern/c2mon/server/cache/loading/config/server-cacheloading.xml"/>
  <import resource="classpath:cern/c2mon/server/supervision/config/server-supervision.xml"/>  
  <import resource="classpath:cern/c2mon/server/daqcommunication/in/config/server-daqcommunication-in.xml"/>
  <import resource="classpath:cern/c2mon/server/daqcommunication/out/config/server-daqcommunication-out.xml"/> 
  <import resource="classpath:cern/c2mon/server/test/server-test-properties.xml"/>
  
</beans>
