<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	                    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <!-- import datasource used for tests -->
  <import resource="classpath:cern/c2mon/server/cache/config/server-cache-cluster.xml"/>
  <import resource="classpath:cern/c2mon/server/test/cache/config/server-test-datasource-hsqldb.xml"/>
  <import resource="classpath:cern/c2mon/server/test/server-test-properties.xml"/>
  
  <!-- test specific settings (cache not in TC mode) -->
  <bean id="cacheManager" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
    <property name="shared" value="true" />
    <property name="configLocation" value="classpath:resources/ehcache-notTCmode-nonpersistent.xml"/>
  </bean>
  
  <bean id="clusterCache" class="cern.c2mon.server.cache.cluster.ClusterCacheImpl" autowire="constructor"/>

</beans>
