<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <!-- common Spring configuration for instantiating and loading the cache module with test data (for use in integration testing) -->
  <import resource="classpath:cern/c2mon/server/test/cache/config/server-cache-common-test.xml"/>
	<import resource="classpath:cern/c2mon/server/cache/config/server-cache-alarm.xml"/>
	<import resource="classpath:cern/c2mon/server/cache/dbaccess/config/server-cachedbaccess-common.xml"/>
	
  <!-- tag location service is mocked -->
  <bean id="tagLocationService" class="org.easymock.EasyMock" factory-method="createStrictMock">
    <constructor-arg value="cern.c2mon.server.cache.TagLocationService"/>  
  </bean>
  
	<!-- beans needed to test cache -->
	<bean id="alarmCache" class="cern.c2mon.server.cache.alarm.AlarmCacheImpl" autowire="constructor"/>
	<bean id="alarmLoaderDAO" class="cern.c2mon.server.cache.loading.impl.AlarmLoaderDAOImpl" autowire="constructor"/>
  <bean id="alarmFacade" class="cern.c2mon.server.cache.alarm.AlarmFacadeImpl" autowire="constructor"/>  
<!--	<bean id="dataTagCacheObjectFacade" class="cern.c2mon.server.cache.datatag.DataTagCacheObjectFacadeImpl"/>-->
	  
  
</beans>
