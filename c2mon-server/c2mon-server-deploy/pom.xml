<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>cern.tim2.tim2-server</groupId>
		<artifactId>tim2-server-pom</artifactId>
		<version>1.0.1-SNAPSHOT</version>
	</parent>

	<groupId>cern.c2mon.c2mon-server</groupId>
	<artifactId>c2mon-server-deploy</artifactId>
	<version>1.0.1-SNAPSHOT</version>

	<packaging>jar</packaging>

	<description>
		c2mon server assembling all required modules and correct configuration for tim2 and dmn	2 solutions
    </description>
	<url></url>

	<dependencies>
        <dependency>
           <groupId>cern.tim2.tim2-server</groupId>
           <artifactId>tim2-server-common</artifactId>
           <scope>runtime</scope>
        </dependency>
        <dependency>
           <groupId>cern.tim2.tim2-server</groupId>
           <artifactId>tim2-server-cache</artifactId>
           <scope>runtime</scope>
        </dependency>
        <dependency>
           <groupId>cern.tim2.tim2-server</groupId>
           <artifactId>tim2-server-cacheloading</artifactId>
           <scope>runtime</scope>
        </dependency>
        <dependency>
           <groupId>cern.tim2.tim2-server</groupId>
           <artifactId>tim2-server-cachedbaccess</artifactId>
           <scope>runtime</scope>
        </dependency>               
        <dependency>
           <groupId>cern.tim2.tim2-server</groupId>
           <artifactId>tim2-server-auth</artifactId>
           <scope>runtime</scope>
        </dependency>               
        <dependency>
           <groupId>cern.tim2.tim2-server</groupId>
           <artifactId>tim2-server-cachepersistence</artifactId>
           <scope>runtime</scope>
        </dependency>                             
        <dependency>
           <groupId>cern.tim2.tim2-server</groupId>
           <artifactId>tim2-server-benchmark</artifactId>
           <scope>runtime</scope>
        </dependency>                             
        <dependency>
           <groupId>cern.tim2.tim2-server</groupId>
           <artifactId>tim2-server-command</artifactId>
           <scope>runtime</scope>
        </dependency>                             
        <dependency>
           <groupId>cern.tim2.tim2-server</groupId>
           <artifactId>tim2-server-daqcommunication-in</artifactId>
           <scope>runtime</scope>
        </dependency>                             
        <dependency>
           <groupId>cern.tim2.tim2-server</groupId>
           <artifactId>tim2-server-daqcommunication-out</artifactId>
           <scope>runtime</scope>
        </dependency>                             
        <dependency>
           <groupId>cern.tim2.tim2-server</groupId>
           <artifactId>tim2-server-rule</artifactId>
           <scope>runtime</scope>
        </dependency>                             
        <dependency>
           <groupId>cern.tim2.tim2-server</groupId>
           <artifactId>tim2-server-supervision</artifactId>
           <scope>runtime</scope>
        </dependency>                             
        <dependency>
           <groupId>cern.c2mon.c2mon-server</groupId>
           <artifactId>c2mon-server-configuration</artifactId>
           <scope>runtime</scope>
        </dependency>                             		
	</dependencies>
	
	<developers />
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.2.1</version>
				<configuration>
					<descriptors>
						<descriptor>src/assembly/dmn2-srv-assembly.xml</descriptor>
						<descriptor>src/assembly/tim2-srv-assembly.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>create-assembly-file</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>

	</build>
</project>
