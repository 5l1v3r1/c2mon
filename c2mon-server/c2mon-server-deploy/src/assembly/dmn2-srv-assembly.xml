<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>dmn2</id>

	<formats>
		<format>tar.gz</format>
	</formats>
		
	<!--  do not include base directory -->
	<includeBaseDirectory>false</includeBaseDirectory>

	<componentDescriptors>
		<componentDescriptor>c2mon-srv-common-assembly.xml</componentDescriptor>
	</componentDescriptors>

	<dependencySets>
		<dependencySet>
			<outputDirectory>/lib</outputDirectory>
			<!-- <outputFileNameMapping>${artifactId}.${artifact.extension}</outputFileNameMapping> -->
			<includes>
				<!-- list all dmn2-srv specific modules here -->
				<!--
					<include>cern.dmn2.dmn2-client:dmn2-client</include> 					
				-->			
			</includes>
			<excludes>
				<exclude>cern.2mon.c2mon-server:c2mon-server-deploy</exclude>
			</excludes>
			<fileMode>0644</fileMode>
		</dependencySet>


	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>bin</directory>
			<includes>
				<include>dmn2*.sh</include>
			</includes>
			<outputDirectory>/bin</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>conf</directory>
			<includes>
				<!--  the files should be specified one-by-one for every solution -->
				<include>dmn2*.properties</include>
				<include>dmn2*.xml</include>
			</includes>
			<outputDirectory>conf/</outputDirectory>
			<fileMode>0644</fileMode>
		</fileSet>
		<fileSet>
			<includes>
				<include>tmp/*</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<includes>
				<include>log/</include>
			</includes>
			<fileMode>0755</fileMode>
			<directoryMode>0755</directoryMode>
		</fileSet>
	</fileSets>

	<files>
		<!--  copy changelog -->
		<file>
			<source>${basedir}/changelog/dmn2-srv-changelog.txt</source>
			<outputDirectory>/</outputDirectory>
			<destName>changelog.txt</destName>
			<lineEnding>unix</lineEnding>
			<fileMode>0444</fileMode>
		</file>
	</files>


</assembly>
