<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>tim2</id>

	<formats>
		<format>tar.gz</format>
	</formats>

	<!--  do not include base directory -->
	<includeBaseDirectory>false</includeBaseDirectory>

	<componentDescriptors>
		<componentDescriptor>src/assembly/c2mon-srv-common-assembly.xml
		</componentDescriptor>
	</componentDescriptors>


	<!-- list all tim2-srv specific modules here -->
	<!--
		NOTE: if the list is empty the whole ependencySets block shall be
		commented out!
	-->

	<dependencySets>
		<!--
			this dependency set loads recursively all dependencies of the the
			c2mon modules. This is a HACK solving the problem described in that
			event:
			http://stackoverflow.com/questions/6018174/maven-assembly-dependency-set-with-include-doesnt-pick-up-transitive-dependencie
		-->
		<dependencySet>
			<outputDirectory>/lib</outputDirectory>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}
			</outputFileNameMapping>
			<fileMode>0644</fileMode>
			<excludes>
				<exclude>cern.tim2*:*</exclude>
				<exclude>cern.c2mon*:*</exclude>
			</excludes>
		</dependencySet>

	</dependencySets>

	<files>
	
		<!--  copy sthe starting script -->
		<file>
			<source>${basedir}/bin/tim2-c2mon.sh</source>
			<outputDirectory>bin/</outputDirectory>
			<destName>c2mon.sh</destName>
			<lineEnding>unix</lineEnding>
			<fileMode>0755</fileMode>
		</file>
			 
		<!--  copy changelog -->
		<file>
			<source>${basedir}/changelog/tim2-srv-changelog.txt</source>
			<outputDirectory>/</outputDirectory>
			<destName>changelog.txt</destName>
			<fileMode>0444</fileMode>
			<lineEnding>unix</lineEnding>
		</file>

		<!--  log4j configuration -->
		<file>
			<source>${basedir}/conf/tim2-log4j.xml</source>
			<outputDirectory>conf/</outputDirectory>
			<destName>log4j.xml</destName>
			<lineEnding>unix</lineEnding>
			<fileMode>0444</fileMode>
		</file>
		<file>
			<source>${basedir}/conf/tim2-cache.properties</source>
			<outputDirectory>conf/</outputDirectory>
			<destName>c2mon-cache.properties</destName>
			<lineEnding>unix</lineEnding>
			<fileMode>0444</fileMode>
		</file>
		<file>
			<source>${basedir}/conf/tim2-datasource.properties</source>
			<outputDirectory>conf/</outputDirectory>
			<destName>c2mon-datasource.properties</destName>
			<lineEnding>unix</lineEnding>
			<fileMode>0444</fileMode>
		</file>
		<file>
			<source>${basedir}/conf/tim2-jms.properties</source>
			<outputDirectory>conf/</outputDirectory>
			<destName>c2mon-jms.properties</destName>
			<lineEnding>unix</lineEnding>
			<fileMode>0444</fileMode>
		</file>
        <file>
			<source>${basedir}/conf/tim2-modules.xml</source>
			<outputDirectory>conf/</outputDirectory>
			<destName>c2mon-modules.properties</destName>
			<lineEnding>unix</lineEnding>
			<fileMode>0444</fileMode>
		</file>
        <file>
			<source>${basedir}/conf/tim2-tc-config.xml</source>
			<outputDirectory>conf/</outputDirectory>
			<destName>c2mon-tc-config.xml</destName>
			<lineEnding>unix</lineEnding>
			<fileMode>0444</fileMode>
		</file>		
	</files>

</assembly>
