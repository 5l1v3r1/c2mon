<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <!-- import common oper/test config -->
  <import resource="classpath:cern/c2mon/server/cache/config/server-cache.xml"/>

  <!-- test specific settings (cache not in TC mode) -->
  <bean id="cacheManager" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
    <property name="configLocation" value="classpath:resources/ehcache-notTCmode-nonpersistent.xml"/>
  </bean>
  
  <!-- test data helpers - need cache-persistence package -->
  <bean class="cern.c2mon.server.cache.dbaccess.test.TestDataHelper"/>
  <bean class="cern.c2mon.server.cache.test.TestCacheDataHelper"/>
  

</beans>
