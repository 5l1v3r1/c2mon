<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean id="clusterCache" class="org.easymock.EasyMock"
    factory-method="createMock">
    <constructor-arg value="cern.c2mon.server.cache.ClusterCache" />
  </bean>

  <!-- <bean id="cacheManager" class="org.springframework.cache.ehcache.EhCacheCacheManager"> 
    <property name="cacheManager"> <bean class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean"> 
    <property name="configLocation" value="resources/ehcache-notTCmode.xml" /> 
    </bean> </property> </bean> -->

  <bean id="deviceClassEhcacheManager"
    class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
    <property name="configLocation" value="classpath:resources/ehcache-notTCmode.xml"></property>
  </bean>

  <bean id="deviceClassEhcache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
    <!-- <property name="cacheManager" ref="cacheManager" /> -->
    <property name="cacheName" value="deviceClassCache" />
  </bean>

  <bean id="deviceClassEhcacheLoader" class="org.easymock.EasyMock"
    factory-method="createMock">
    <constructor-arg value="cern.c2mon.server.cache.common.EhcacheLoaderImpl" />
  </bean>

  <bean id="deviceClassCacheLoader" class="org.easymock.EasyMock"
    factory-method="createMock">
    <constructor-arg value="cern.c2mon.server.cache.common.C2monCacheLoader" />
  </bean>

  <bean id="deviceClassDAO" class="org.easymock.EasyMock"
    factory-method="createMock">
    <constructor-arg
      value="cern.c2mon.server.cache.loading.SimpleCacheLoaderDAO" />
  </bean>

  <bean
    class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="properties">
      <props>
        <prop key="c2mon.server.cache.skippreloading">true</prop>
        <prop key="cern.c2mon.cache.mode">single</prop>  
      </props>
    </property>
  </bean>

  <bean id="deviceClassCache" class="cern.c2mon.server.cache.device.DeviceClassCacheImpl">
  </bean>

</beans>
