<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
  
  <bean id="dataTagEhcache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
    <property name="cacheManager" ref="cacheManager"/>
    <property name="cacheName" value="tagCache"/>
  </bean>
  
  <bean id="dataTagEhcacheLoader" class="cern.c2mon.server.cache.common.EhcacheLoaderImpl">
    <constructor-arg ref="dataTagEhcache"/>
    <constructor-arg ref="dataTagLoaderDAO"/>
  </bean>
  
  <bean id="dataTagCacheLoader" class="cern.c2mon.server.cache.common.BatchCacheLoader">
    <constructor-arg ref="dataTagEhcache"/>
    <constructor-arg ref="dataTagLoaderDAO"/>
    <constructor-arg value="${c2mon.server.cacheloading.batchSize}"/>
    <constructor-arg value="${c2mon.server.cacheloading.maxThreads}"/>
    <constructor-arg value="${c2mon.server.cacheloading.queueSize}"/>
  </bean>
  

</beans>
