<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

<!--  <context:annotation-config/>-->
<!--  <context:component-scan base-package="cern.c2mon.server.cache.alive"/>-->
  
  
  <bean id="aliveTimerEhcache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
    <property name="cacheManager" ref="cacheManager"/>
    <property name="cacheName" value="aliveTimerCache"/>
  </bean>
  
   <bean id="aliveTimerEhcacheLoader" class="cern.c2mon.server.cache.common.EhcacheLoaderImpl">
    <constructor-arg ref="aliveTimerEhcache"/>
    <constructor-arg ref="aliveTimerDAO"/>
  </bean>
  
   <bean id="aliveTimerCacheLoader" class="cern.c2mon.server.cache.common.SimpleTimCacheLoader">
    <constructor-arg ref="aliveTimerEhcache"/>
    <constructor-arg ref="aliveTimerDAO"/>    
   </bean>
  
</beans>
