<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	                    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
  
  <bean id="equipmentEhcache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
    <property name="cacheManager" ref="cacheManager"/>
    <property name="cacheName" value="equipmentCache"/>
  </bean>
  
   <bean id="equipmentEhcacheLoader" class="cern.c2mon.server.cache.common.EhcacheLoaderImpl">
    <constructor-arg ref="equipmentEhcache"/>
    <constructor-arg ref="equipmentDAO"/>
  </bean>
  
   <bean id="equipmentCacheLoader" class="cern.c2mon.server.cache.common.BatchCacheLoader">
    <constructor-arg ref="equipmentEhcache"/>
    <constructor-arg ref="equipmentDAO"/>
    <constructor-arg value="${cache.loader.equipment.batch.size}"/>
    <constructor-arg value="${cache.loader.equipment.threads.max}"/>
    <constructor-arg value="${cache.loader.equipment.queue.size}"/>
  </bean>

</beans>
