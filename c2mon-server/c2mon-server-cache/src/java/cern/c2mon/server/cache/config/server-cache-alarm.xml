<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean id="alarmEhcache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
    <property name="cacheManager" ref="cacheManager"/>
    <property name="cacheName" value="alarmCache"/>
  </bean>
  
   <bean id="alarmEhcacheLoader" class="cern.c2mon.server.cache.common.EhcacheLoaderImpl">
    <constructor-arg ref="alarmEhcache"/>
    <constructor-arg ref="alarmLoaderDAO"/>
  </bean>
  
  <bean id="alarmCacheLoader" class="cern.c2mon.server.cache.common.BatchCacheLoader">
    <constructor-arg ref="alarmEhcache"/>
    <constructor-arg ref="alarmLoaderDAO"/>
    <constructor-arg value="${c2mon.server.cacheloading.batchSize}"/>
    <constructor-arg value="${c2mon.server.cacheloading.maxThreads}"/>
    <constructor-arg value="${c2mon.server.cacheloading.queueSize}"/>
  </bean>

</beans>
