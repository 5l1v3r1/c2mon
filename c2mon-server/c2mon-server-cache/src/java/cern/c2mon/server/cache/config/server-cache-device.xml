<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	                    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
  
  <bean id="deviceEhcache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
    <property name="cacheManager" ref="cacheManager"/>
    <property name="cacheName" value="deviceCache"/>
  </bean>
  
   <bean id="deviceEhcacheLoader" class="cern.c2mon.server.cache.common.EhcacheLoaderImpl">
    <constructor-arg ref="deviceEhcache"/>
    <constructor-arg ref="deviceDAO"/>
  </bean>
  
   <bean id="deviceCacheLoader" class="cern.c2mon.server.cache.common.SimpleC2monCacheLoader">
    <constructor-arg ref="deviceEhcache"/>
    <constructor-arg ref="deviceDAO"/>
<!--     <constructor-arg value="${cache.loader.batch.size}"/>
    <constructor-arg value="${cache.loader.threads.max}"/>
    <constructor-arg value="${cache.loader.queue.size}"/> -->
  </bean>

</beans>
