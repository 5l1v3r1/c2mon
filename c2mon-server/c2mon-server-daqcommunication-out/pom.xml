<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>cern.c2mon.c2mon-server</groupId>
    <artifactId>c2mon-server-pom</artifactId>
    <version>RELEASE</version>
  </parent>

  <groupId>cern.c2mon.c2mon-server</groupId>
  <artifactId>c2mon-server-daqcommunication-out</artifactId>
  <version>1.7.0</version>
  <name>c2mon-server-daqcommunication-out</name>
  <packaging>jar</packaging>
  <description>C2MON module managing outgoing communication to the DAQ layer</description>
  <url>http://timweb.cern.ch</url>

  <scm>
    <developerConnection>scm:svn:svn+ssh://svn.cern.ch/reps/tim2/trunk/c2mon/c2mon-server/c2mon-server-daqcommunication-out</developerConnection>
  </scm>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
    <dependency>
      <groupId>org.easymock</groupId>
      <artifactId>easymock</artifactId>
    </dependency>
    <dependency>
      <groupId>org.easymock</groupId>
      <artifactId>easymockclassextension</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-test</artifactId>
    </dependency>

    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-jms</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.activemq</groupId>
      <artifactId>activemq-all</artifactId>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-cache</artifactId>
      <version>[1.5.5, 2.0.0)</version>
    </dependency>

    <!-- C2MON test dependencies -->
    <dependency>
      <groupId>net.sf.ehcache</groupId>
      <artifactId>ehcache-core</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-test</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.8.1</version>
        <configuration>
          <argLine>
            -Dc2mon.log.dir=${basedir}/build/log
          </argLine>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <developers />
</project>
