<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>cern</groupId>
		<artifactId>parent-pom</artifactId>
		<version>1.0.5-SNAPSHOT</version>
	</parent>

	<groupId>cern.dmn2.dmn2-daq</groupId>
	<artifactId>diamon-snmp-service-deploy</artifactId>
	<version>0.1.0-SNAPSHOT</version>
	<name>DMN2 SNMP service</name>
	<packaging>pom</packaging>

	<description>
	  DMN2 DAQ SNMP service deployment  module
        </description>

	<url></url>

	<scm>
		<developerConnection>scm:svn:svn+ssh://svn.cern.ch/reps/tim2/trunk/c2mon/c2mon-deploy/dmn2-snmp-service-deploy</developerConnection>
	</scm>

	<developers />

	<dependencies>

		<dependency>
			<groupId>cern.accsoft.diamon</groupId>
			<artifactId>diamon-snmp-service</artifactId>
			<version>[0.1.0,2.0.0)</version>
		</dependency>

	</dependencies>

	<build>
		<plugins>

			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-resources</id>
						<phase>compile</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.outputDirectory}
							</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}</directory>
									<filtering>true</filtering>
									<includes>
										<include>version.txt</include>
									</includes>
								</resource>
								<resource>
									<directory>${basedir}</directory>
									<filtering>false</filtering>
									<excludes>
										<exclude>version.txt</exclude>
									</excludes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor>src/assembly/assembly.xml</descriptor>
					</descriptors>

				</configuration>
				<executions>
					<execution>
						<id>create-assembly-file</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
