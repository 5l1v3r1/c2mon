<?xml version="1.0" encoding="UTF-8"?>
<products>
	<product name="dmn2-daq-rda">

		<!-- this application section is a parent configuration for both PROD and TEST -->
		<application>
			<startscript>
				<main-class name="cern.c2mon.daq.common.startup.DaqStartup">
					<arg>-processName ${PROCESS_NAME}</arg>
					<output>
						<file name="${DAQ_LOG_HOME}/${PROCESS_NAME}.out.log" />
					</output>
				</main-class>
				<java-vm-args>-Xms384m -Xmx384m -XX:+UseParallelGC -XX:MaxGCPauseMillis=100</java-vm-args>
			</startscript>
		</application>

		<application name="dmn2-daq-rda-pro">

			<deployment installLocation="/opt/dmn2/dmn2-daq/dmn2-daq-rda">
				<directory name="conf">
					<file name="c2mon.properties" source="~diamonop/c2mon/daq/daq.properties" mask="400" />
					<file name="log4j.xml" sourceDir="~diamonop/c2mon/daq" mask="444" />
				</directory>
				<notification>
					<mail address="diamon-developers@cern.ch" />
				</notification>
			</deployment>
			<startscript name="DMN2-DAQ-RDA_SMP">
				<env name="PROCESS_NAME" value="P_RDA_SMP" />
			</startscript>			
			<startscript name="DMN2-DAQ-RDA_BIS">
				<env name="PROCESS_NAME" value="P_RDA_BIS" />
			</startscript>
			<startscript name="DMN2-DAQ-RDA_PLC">
				<env name="PROCESS_NAME" value="P_RDA_PLC" />
			</startscript>
			<startscript name="DMN2-DAQ-RDA_MISC">
				<env name="PROCESS_NAME" value="P_RDA_MISC" />
			</startscript>
		</application>

		<application name="dmn2-daq-rda-dev">
			<deployment installLocation="/opt/dmn2/dmn2-daq/dmn2-daq-rda-dev">
				<directory name="conf">
					<file name="c2mon.properties" source="~dmndev/c2mon/daq/daq.properties" mask="400" />
					<file name="log4j.xml" sourceDir="~dmndev/c2mon/daq" mask="444" />
					
				</directory>
			</deployment>
			<startscript name="DMN2-DAQ-RDA_SMP">
				<env name="PROCESS_NAME" value="P_RDA_SMP" />
			</startscript>						
			<startscript name="DMN2-DAQ-RDA_BIS">
				<env name="PROCESS_NAME" value="P_RDA_BIS" />
			</startscript>
			<startscript name="DMN2-DAQ-RDA_PLC">
				<env name="PROCESS_NAME" value="P_RDA_PLC" />
			</startscript>
			<startscript name="DMN2-DAQ-RDA_MISC">
				<env name="PROCESS_NAME" value="P_RDA_MISC" />
			</startscript>			
		</application>

	</product>
</products>