<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>tim2</id>

	<formats>
		<format>tar.gz</format>
	</formats>

	<!--  do not include base directory -->
	<includeBaseDirectory>false</includeBaseDirectory>

	<componentDescriptors>
		<componentDescriptor>src/assembly/c2mon-dippublisher-common-assembly.xml
		</componentDescriptor>
	</componentDescriptors>

	<files>

		<!--  copy the starting scripts -->
		<file>
			<source>${basedir}/bin/dip-publisher.sh</source>
			<outputDirectory>bin/</outputDirectory>
			<destName>dip-publisher.sh</destName>
			<lineEnding>unix</lineEnding>
			<fileMode>0755</fileMode>
		</file>
		
		<file>
      <source>${basedir}/bin/dipconf.sql</source>
      <outputDirectory>bin/</outputDirectory>
      <destName>dipconf.sql</destName>
      <lineEnding>unix</lineEnding>
      <fileMode>0755</fileMode>
    </file>
    
    <file>
      <source>${basedir}/bin/dippub-config.sh</source>
      <outputDirectory>bin/</outputDirectory>
      <destName>dippub-config.sh</destName>
      <lineEnding>unix</lineEnding>
      <fileMode>0755</fileMode>
    </file>
		
		<!--  deployment descriptor -->
    <file>
      <source>${basedir}/conf/tim2-deployment.xml</source>
      <outputDirectory>/</outputDirectory>
      <destName>deployment.xml</destName>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>

		<!--  copy XML publication list to which the DIP publishers have to subscribe -->
		<file>
			<source>${basedir}/conf/DIPPub01DataTags.xml</source>
			<outputDirectory>conf/</outputDirectory>
			<destName>DIPPub01DataTags.xml</destName>
			<lineEnding>unix</lineEnding>
			<fileMode>0444</fileMode>
		</file>
		
		<file>
      <source>${basedir}/conf/DIPPub02DataTags.xml</source>
      <outputDirectory>conf/</outputDirectory>
      <destName>DIPPub02DataTags.xml</destName>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>
    
    <!-- copy XML schema -->    
    <file>
      <source>${basedir}/conf/TIMDipPublisherDataTags.dtd</source>
      <outputDirectory>conf/</outputDirectory>
      <destName>TIMDipPublisherDataTags.dtd</destName>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>
    
    <file>
      <source>${basedir}/conf/TIMDipPublisherDataTags.xsl</source>
      <outputDirectory>conf/</outputDirectory>
      <destName>TIMDipPublisherDataTags.xsl</destName>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>

		<!--  log4j configuration -->
		<file>
			<source>${basedir}/conf/log4j.xml</source>
			<outputDirectory>conf/</outputDirectory>
			<destName>log4j.xml</destName>
			<lineEnding>unix</lineEnding>
			<fileMode>0444</fileMode>
		</file>
	</files>

</assembly>
