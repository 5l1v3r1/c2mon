<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>cern.c2mon.c2mon-deploy</groupId>
		<artifactId>c2mon-publisher-rda3-deploy</artifactId>
		<version>1.0.2-SNAPSHOT</version>
		<relativePath>../../pom.xml</relativePath>
	</parent>

	<groupId>cern.c2mon.c2mon-deploy</groupId>
	<artifactId>c2mon-publisher-rda3-tim2</artifactId>
	<name>The TIM2 RDA3 Publisher</name>
	<version>1.0.2-SNAPSHOT</version>
	<packaging>pom</packaging>

	<description>C2MON RDA publisher assembling all required modules and configuration files for TIM2</description>
	<url></url>

	<dependencies>
	</dependencies>

	<developers />
	<scm>
		<developerConnection>scm:svn:svn+ssh://svn.cern.ch/reps/tim2/trunk/c2mon/c2mon-deploy/c2mon-publisher-rda3-deploy/modules/tim2</developerConnection>
	</scm>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>

					<descriptors>
						<descriptor>src/assembly/tim2-rdapublisher-assembly.xml</descriptor>
					</descriptors>

				</configuration>
				<executions>
					<execution>
						<id>create-assembly-file</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-resources</id>
						<phase>compile</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.outputDirectory}
              </outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}</directory>
									<filtering>true</filtering>
									<includes>
										<include>version.txt</include>
									</includes>
								</resource>
								<resource>
									<directory>${basedir}</directory>
									<filtering>false</filtering>
									<excludes>
										<exclude>version.txt</exclude>
									</excludes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

</project>
