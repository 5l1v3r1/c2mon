<?xml version="1.0" encoding="UTF-8"?>
<products>
   <product name="dmn2-daq-clic">

      <!-- this application section is a parent configuration for both PROD and TEST -->
      <application>
         <startscript>
            <main-class name="cern.c2mon.daq.common.startup.DaqStartup">
               <arg>-c2monProperties conf/daq.properties -log4j conf/log4j.xml -daqConf conf/daq.conf -processName ${PROCESS_NAME} -noDeadband </arg>
               <output>
                  <file name="${DAQ_LOG_HOME}/${PROCESS_NAME}.out.log" />
               </output>
            </main-class>
            <property name="c2mon.daq.equipment.alive.filteringtrue" value="true" />
            <property name="c2mon.process.name" value="${PROCESS_NAME}" />
            <property name="c2mon.log.dir" value="log" />
            <property name="c2mon.daq.spring.context" value="file:conf/daq-core-service.xml" />
            <java-vm-args>-Xms512m -Xmx512m -XX:+UseParallelGC -XX:MaxGCPauseMillis=100</java-vm-args>
         </startscript>
      </application>


      <application name="dmn2-daq-clic">
         <deployment installLocation="/opt/dmn2/dmn2-daq/dmn2-daq-clic">
            <backupPolicy keepBackups="2">
               <preserve type="dir" name="log" />
            </backupPolicy>
            <directory name="conf">
               <file name="daq.properties" sourceDir="~diamonop/c2mon/daq" mask="400" />
               <file name="log4j.xml" sourceDir="~diamonop/c2mon/daq" mask="444" />
               <file name="daq-core-service.xml" sourceDir="~diamonop/c2mon/daq" mask="444" />
            </directory>
            <notification>
               <mail address="diamon-developers@cern.ch" />
            </notification>
         </deployment>
         <startscript name="DMN2-DAQ-CLIC_VMW">
            <env name="PROCESS_NAME" value="P_CLIC_VMW" />
         </startscript>
         <startscript name="DMN2-DAQ-CLIC_VML">
            <env name="PROCESS_NAME" value="P_CLIC_VML" />
         </startscript>
         <startscript name="DMN2-DAQ-CLIC_LHC">
            <env name="PROCESS_NAME" value="P_CLIC_LHC" />
         </startscript>
         <startscript name="DMN2-DAQ-CLIC_INJ">
            <env name="PROCESS_NAME" value="P_CLIC_INJ" />
         </startscript>
         <startscript name="DMN2-DAQ-CLIC_SPS">
            <env name="PROCESS_NAME" value="P_CLIC_SPS" />
         </startscript>
         <startscript name="DMN2-DAQ-CLIC_MISC">
            <env name="PROCESS_NAME" value="P_CLIC_MISC" />
         </startscript>
         <startscript name="DMN2-DAQ-CLIC_MISC_FEC">
            <env name="PROCESS_NAME" value="P_CLIC_MISC_FEC" />
         </startscript>
         <startscript name="DMN2-DAQ-CLIC_MISC_WS">
            <env name="PROCESS_NAME" value="P_CLIC_MISC_WS" />
         </startscript>
      </application>

      <application name="dmn2-daq-clic-dev">
         <deployment installLocation="/opt/dmn2/dmn2-daq/dmn2-daq-clic-dev">
            <backupPolicy keepBackups="1">
               <preserve type="dir" name="log" />
            </backupPolicy>
            <directory name="conf">
               <file name="daq.properties" sourceDir="~dmndev/c2mon/daq" mask="400" />
