<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>cern.c2mon.c2mon-deploy</groupId>
    <artifactId>c2mon-server-deploy</artifactId>
    <version>1.7.6</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <groupId>cern.c2mon.c2mon-server.dmn2</groupId>
  <artifactId>c2mon-server</artifactId>
  <name>c2mon-server-dmn2</name>
  <version>1.7.6</version>

  <description>C2MON server assembling all required modules and configuration files for DMN2</description>

  <dependencies>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-all</artifactId>
      <exclusions>
        <exclusion>
          <artifactId>ehcache-core</artifactId>
          <groupId>net.sf.ehcache</groupId>
        </exclusion>
        <exclusion>
          <artifactId>hsqldb</artifactId>
          <groupId>org.hsqldb</groupId>
        </exclusion>
        <exclusion>
          <artifactId>log4j-over-slf4j</artifactId>
          <groupId>org.slf4j</groupId>
        </exclusion>
        <exclusion>
          <artifactId>mysql-connector-java</artifactId>
          <groupId>mysql</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  
    <!-- 
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-benchmark</artifactId>
      <version>[1.5.0, 2.0.0)</version>
    </dependency>
     -->
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-laser</artifactId>
      <version>[1.7.0, 2.0.0)</version>
      <exclusions>
        <exclusion>
          <artifactId>log4j</artifactId>
          <groupId>log4j</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-shorttermlog</artifactId>
      <version>[1.7.0, 2.0.0)</version>
      <exclusions>
        <exclusion>
          <artifactId>hsqldb</artifactId>
          <groupId>org.hsqldb</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-eslog</artifactId>
      <version>[1.7.0, 2.0.0)</version>
    </dependency>
     
     
    <!-- 3rd party dependencies -->
    <dependency>
      <groupId>net.sf.ehcache</groupId>
      <artifactId>ehcache-ee</artifactId>
      <scope>runtime</scope>
    </dependency>

    <!-- use Oracle db -->
    <dependency>
      <groupId>oracle</groupId>
      <artifactId>ojdbc</artifactId>
    </dependency>

    <!-- for central logging -->
    <!-- 
    <dependency>
      <groupId>cern.cmw</groupId>
      <artifactId>cmw-log-log4j</artifactId>
      <scope>runtime</scope>
      <version>[1.5.8, 2.0.0)</version>
    </dependency>
     -->
     
    <!--
      Allows exposing the JMX interface to DIAMON
    -->
    <dependency>
        <groupId>cern.accsoft.commons</groupId>
        <artifactId>accsoft-commons-jmxdirectory-registration</artifactId>
        <version>[1.1.7, 2.0.0)</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>

      <!-- Prevent Maven from building a jar -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <executions>
          <execution>
            <id>default-jar</id>
            <phase/>
          </execution>
        </executions>
      </plugin>

      <!-- Prevent Maven from trying to install a jar -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-install-plugin</artifactId>
        <executions>
          <execution>
            <id>default-jar</id>
            <phase/>
          </execution>
        </executions>
      </plugin>

      <!-- Prevent Maven from creating a source jar -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <configuration>
          <skipSource>true</skipSource>
        </configuration>
      </plugin>

      <!-- Create a tar.gz -->
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>

          <descriptors>
            <descriptor>src/assembly/assembly-dmn2.xml</descriptor>
          </descriptors>

        </configuration>
        <executions>
          <execution>
            <id>create-assembly-file</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
