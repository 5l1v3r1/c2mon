<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>c2mon-server-deploy</artifactId>
    <groupId>cern.c2mon.c2mon-deploy</groupId>
    <version>1.7.3</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <groupId>cern.c2mon.c2mon-server.dmn2</groupId>
  <artifactId>c2mon-server</artifactId>
  <name>c2mon-server-dmn2</name>
  <version>1.7.3-SNAPSHOT</version>

  <description>C2MON server assembling all required modules and configuration files for DMN2</description>

  <dependencies>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-all</artifactId>
      <exclusions>
        <exclusion>
          <groupId>net.sf.ehcache</groupId>
          <artifactId>ehcache-core</artifactId>
        </exclusion>
        <exclusion>
          <groupId>net.sf.ehcache</groupId>
          <artifactId>ehcache</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-shorttermlog</artifactId>
      <version>[1.5.0, 2.0.0)</version>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-laser</artifactId>
      <version>[1.5.0, 2.0.0)</version>
    </dependency>

    <!-- TODO: Re-enable elasticsearch once ready -->
    <!--<dependency>-->
      <!--<groupId>cern.c2mon.c2mon-server</groupId>-->
      <!--<artifactId>c2mon-server-eslog</artifactId>-->
      <!--<version>[1.6.0, 2.0.0)</version>-->
    <!--</dependency>-->

    <!-- 3rd party dependencies -->
    <dependency>
      <groupId>net.sf.ehcache</groupId>
      <artifactId>ehcache-ee</artifactId>
      <scope>runtime</scope>
    </dependency>
    <dependency>
    	<groupId>cern.c2mon.c2mon-server</groupId>
    	<artifactId>c2mon-server-eslog</artifactId>
    	<version>[1.7.0,2.0.0]</version>
    </dependency>
  </dependencies>

  <developers />
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>

          <descriptors>
            <descriptor>src/assembly/assembly-dmn2.xml</descriptor>
          </descriptors>

        </configuration>
        <executions>
          <execution>
            <id>create-assembly-file</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
