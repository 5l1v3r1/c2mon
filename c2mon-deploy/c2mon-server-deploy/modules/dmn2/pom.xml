<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>c2mon-server-deploy</artifactId>
		<groupId>cern.c2mon.c2mon-deploy</groupId>
		<version>1.0.11</version>
		<relativePath>../../pom.xml</relativePath>
	</parent>

	<groupId>cern.c2mon.c2mon-deploy</groupId>
	<artifactId>c2mon-srv-dmn2</artifactId>
	<name>The DMN2 SRV module</name>
	<version>1.0.11</version>
	<packaging>pom</packaging>

	<description>C2MON server assembling all required modules and configuration files for DMN2</description>
	<url></url>

	<dependencies>
		<dependency>
			<groupId>cern.tim2.tim2-server</groupId>
			<artifactId>tim2-server-common</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-server</groupId>
			<artifactId>tim2-server-cache</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-server</groupId>
			<artifactId>tim2-server-cacheloading</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-server</groupId>
			<artifactId>tim2-server-cachedbaccess</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-server</groupId>
			<artifactId>tim2-server-cachepersistence</artifactId>
		</dependency>
		<!--		<dependency>-->
		<!--			<groupId>cern.tim2.tim2-server</groupId>-->
		<!--			<artifactId>tim2-server-benchmark</artifactId>-->
		<!--		</dependency>-->
		<dependency>
			<groupId>cern.tim2.tim2-server</groupId>
			<artifactId>tim2-server-command</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-server</groupId>
			<artifactId>tim2-server-daqcommunication-in</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-server</groupId>
			<artifactId>tim2-server-daqcommunication-out</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-server</groupId>
			<artifactId>tim2-server-rule</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-server</groupId>
			<artifactId>tim2-server-supervision</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-configuration</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-lifecycle</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-client</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-shorttermlog</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-laser</artifactId>
		</dependency>
	</dependencies>

	<developers />
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>

					<descriptors>
						<descriptor>src/assembly/dmn2-srv-assembly.xml</descriptor>
					</descriptors>

				</configuration>
				<executions>
					<execution>
						<id>create-assembly-file</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-resources</id>
						<phase>compile</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.outputDirectory}
							</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}</directory>
									<filtering>true</filtering>
									<includes>
										<include>version.txt</include>
									</includes>
								</resource>
								<resource>
									<directory>${basedir}</directory>
									<filtering>false</filtering>
									<excludes>
										<exclude>version.txt</exclude>
									</excludes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

</project>
