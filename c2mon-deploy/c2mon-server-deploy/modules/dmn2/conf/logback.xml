<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
  <include resource="org/springframework/boot/logging/logback/defaults.xml" />
  <include resource="org/springframework/boot/logging/logback/console-appender.xml" />


  <property name="LOG_FILE"                    value="${LOG_PATH:-/tmp}/c2mon.log"/>
  <property name="ERROR_LOG_FILE"              value="${LOG_PATH:-/tmp}/c2mon.error.log"/>
  <property name="PERSISTENCE_LOG_FILE"        value="${LOG_PATH:-/tmp}/c2mon.persistence.log"/>
  <property name="TAG_LOG_FILE"                value="${LOG_PATH:-/tmp}/c2mon.tag.log"/>
  <property name="RULE_LOG_FILE"               value="${LOG_PATH:-/tmp}/c2mon.rultetag.log"/>
  <property name="BENCHMARK_TAG_LOG_FILE"      value="${LOG_PATH:-/tmp}/c2mon.benchmark.tag.log"/>
  <property name="BENCHMARK_PRIORITY_LOG_FILE" value="${LOG_PATH:-/tmp}/c2mon.benchmark.priority.log"/>
  <property name="LASER_ALARM_LOG_FILE"        value="${LOG_PATH:-/tmp}/c2mon.laser.log"/>
  <property name="STL_LOG_FILE"                value="${LOG_PATH:-/tmp}/c2mon.shortterm.log"/>
  <property name="ES_MODULE_LOG_FILE"          value="${LOG_PATH:-/tmp}/c2mon.es-module.log"/>
  


  <appender name="FileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_FILE}</file>
    <encoder>
      <pattern>${FILE_LOG_PATTERN}</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>${LOG_FILE}.%i</fileNamePattern>
    </rollingPolicy>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <MaxFileSize>10MB</MaxFileSize>
    </triggeringPolicy>
  </appender>

  <appender name="ErrorAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${ERROR_LOG_FILE}</file>
    <encoder>
      <pattern>${FILE_LOG_PATTERN}</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>${ERROR_LOG_FILE}.%i</fileNamePattern>
    </rollingPolicy>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <MaxFileSize>10MB</MaxFileSize>
    </triggeringPolicy>
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>WARN</level>
    </filter>
  </appender>

  <appender name="PersistenceAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${PERSISTENCE_LOG_FILE}</file>
    <encoder>
      <pattern>${FILE_LOG_PATTERN}</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>${PERSISTENCE_LOG_FILE}.%i</fileNamePattern>
    </rollingPolicy>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <MaxFileSize>10MB</MaxFileSize>
    </triggeringPolicy>
  </appender>

  <appender name="TagAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${TAG_LOG_FILE}</file>
    <encoder>
      <pattern>${FILE_LOG_PATTERN}</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>${TAG_LOG_FILE}.%i</fileNamePattern>
    </rollingPolicy>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <MaxFileSize>10MB</MaxFileSize>
    </triggeringPolicy>
  </appender>

  <appender name="RuleTagAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${RULE_LOG_FILE}</file>
    <encoder>
      <pattern>${FILE_LOG_PATTERN}</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>${RULE_LOG_FILE}.%i</fileNamePattern>
    </rollingPolicy>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <MaxFileSize>10MB</MaxFileSize>
    </triggeringPolicy>
  </appender>

  <appender name="BenchmarkDataTagAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${BENCHMARK_TAG_LOG_FILE}</file>
    <encoder>
      <pattern>${FILE_LOG_PATTERN}</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>${BENCHMARK_TAG_LOG_FILE}.%i</fileNamePattern>
    </rollingPolicy>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <MaxFileSize>10MB</MaxFileSize>
    </triggeringPolicy>
  </appender>

  <appender name="BenchmarkPriorityAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${BENCHMARK_PRIORITY_LOG_FILE}</file>
    <encoder>
      <pattern>${FILE_LOG_PATTERN}</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>${BENCHMARK_PRIORITY_LOG_FILE}.%i</fileNamePattern>
    </rollingPolicy>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <MaxFileSize>10MB</MaxFileSize>
    </triggeringPolicy>
  </appender>

  <appender name="LaserAlarmsAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LASER_ALARM_LOG_FILE}</file>
    <encoder>
      <pattern>${FILE_LOG_PATTERN}</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>${LASER_ALARM_LOG_FILE}.%i</fileNamePattern>
    </rollingPolicy>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <MaxFileSize>10MB</MaxFileSize>
    </triggeringPolicy>
  </appender>

  <appender name="ShortTermLogAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${STL_LOG_FILE}</file>
    <encoder>
      <pattern>${FILE_LOG_PATTERN}</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>${STL_LOG_FILE}.%i</fileNamePattern>
    </rollingPolicy>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <MaxFileSize>10MB</MaxFileSize>
    </triggeringPolicy>
  </appender>

  <appender name="AdminEmailAppender" class="ch.qos.logback.classic.net.SMTPAppender">
    <smtpHost>cernmx.cern.ch</smtpHost>
    <to>felix.ehm@cern.ch</to>
    <from>diamon.support@cern.ch</from>
    <subject>C2MON server warning</subject>
    <layout class="ch.qos.logback.classic.html.HTMLLayout"/>
  </appender>

  <appender name="AdminSmsAppender" class="ch.qos.logback.classic.net.SMTPAppender">
    <smtpHost>cernmx.cern.ch</smtpHost>
    <to>0041764871240@mail2sms.cern.ch</to>
    <from>diamon.support@cern.ch</from>
    <subject>C2MON server warning</subject>
    <layout class="ch.qos.logback.classic.html.HTMLLayout"/>
  </appender>


  <appender name="ElasticseachLogAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${ES_MODULE_LOG_FILE}</file>
    <encoder>
      <pattern>${FILE_LOG_PATTERN}</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>${ES_MODULE_LOG_FILE}.%i</fileNamePattern>
    </rollingPolicy>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <MaxFileSize>10MB</MaxFileSize>
    </triggeringPolicy>
  </appender>

  <logger name="cern.c2mon.server.eslog" level="INFO">
    <appender-ref ref="ElasticseachLogAppender"/>
  </logger>
  <logger name="org.elasticsearch" level="DEBUG">
    <appender-ref ref="ElasticseachLogAppender"/>
  </logger>
  
  <!-- TODO: add CMW central logging appender -->


  <logger name="BenchmarkDataTagLogger" level="INFO">
    <appender-ref ref="BenchmarkDataTagAppender"/>
  </logger>
  <logger name="BenchmarkPriorityLogger" level="INFO">
    <appender-ref ref="BenchmarkPriorityAppender"/>
  </logger>
  <logger name="SourceDataTagLogger" level="INFO">
    <appender-ref ref="TagAppender"/>
  </logger>
  <logger name="RuleTagLogger" level="INFO">
    <appender-ref ref="RuleTagAppender"/>
  </logger>
  <logger name="LaserAlarmsLogger" level="INFO">
    <appender-ref ref="LaserAlarmsAppender"/>
  </logger>
  <logger name="ShortTermLogFallbackLogger" level="INFO">
    <appender-ref ref="ShortTermLogAppender"/>
  </logger>
  <logger name="cern.c2mon" level="DEBUG"/>
  <logger name="cern.c2mon.server.shorttermlog" level="DEBUG"/>
  <logger name="cern.c2mon.pmanager" level="DEBUG"/>
  <logger name="cern.c2mon.server.cachepersistence" level="DEBUG">
    <appender-ref ref="PersistenceAppender"/>
  </logger>
  
  <!-- reduces noise from NULL tag values reported by the DB module -->
  <logger name="cern.c2mon.server.cache.dbaccess.type.ObjectTypeHandler" level="OFF"/>
  
  <logger name="AdminSmsLogger" level="INFO">
    <appender-ref ref="AdminSmsAppender"/>
    <appender-ref ref="AdminEmailAppender"/>
    <appender-ref ref="FileAppender"/>
  </logger>
  <logger name="AdminEmailLogger" level="INFO">
    <appender-ref ref="AdminEmailAppender"/>
  </logger>
  <logger name="org.apache.activemq" level="INFO"/>
  <logger name="org.springframework" level="INFO"/>

  <root level="INFO">
    <appender-ref ref="CONSOLE" />
    <appender-ref ref="FileAppender"/>
    <appender-ref ref="ErrorAppender"/>
  </root>
</configuration>
