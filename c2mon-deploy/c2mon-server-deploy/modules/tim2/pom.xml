<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>c2mon-server-deploy</artifactId>
		<groupId>cern.c2mon.c2mon-deploy</groupId>
		<version>1.2.2-SNAPSHOT</version>
		<relativePath>../../pom.xml</relativePath>
	</parent>

	<groupId>cern.c2mon.c2mon-deploy</groupId>
	<artifactId>c2mon-srv-tim2</artifactId>
	<name>The TIM2 SRV module</name>
	<version>1.2.2-SNAPSHOT</version>

	<description>C2MON server assembling all required modules and configuration files for TIM2</description>
	<url></url>

	<dependencies>
		<dependency>
			<groupId>cern.tim2.tim2-shared</groupId>
			<artifactId>tim2-shared-rule</artifactId>
			<version>[1.0.1]</version>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-server</groupId>
			<artifactId>tim2-server-common</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-server</groupId>
			<artifactId>tim2-server-cache</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-server</groupId>
			<artifactId>tim2-server-cacheloading</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-server</groupId>
			<artifactId>tim2-server-cachedbaccess</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-server</groupId>
			<artifactId>tim2-server-cachepersistence</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-server</groupId>
			<artifactId>tim2-server-benchmark</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-server</groupId>
			<artifactId>tim2-server-command</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-server</groupId>
			<artifactId>tim2-server-daqcommunication-in</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-server</groupId>
			<artifactId>tim2-server-daqcommunication-out</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-server</groupId>
			<artifactId>tim2-server-rule</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-server</groupId>
			<artifactId>tim2-server-supervision</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-configuration</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-lifecycle</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-client</artifactId>
			<version>[1.0.0,2.0.0)</version>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-video</artifactId>
			<version>[1.0.0,2.0.0)</version>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-laser</artifactId>
			<version>[1.0.0,2.0.0)</version>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-shorttermlog</artifactId>
		</dependency>
		
		<!-- for distributed cache only -->
		<dependency>
			<groupId>org.terracotta.bigmemory</groupId>
			<artifactId>bigmemory</artifactId>
			<scope>runtime</scope>
		</dependency>
		<dependency> 
		  <groupId>org.terracotta</groupId> 
		  <artifactId>terracotta-toolkit-runtime-ee</artifactId> 
		  <scope>runtime</scope> 
		</dependency> 
		

		<!-- for logging -->
		<dependency>
			<groupId>cern.cmw.java.log.sources</groupId>
			<artifactId>cmw-log-log4j</artifactId>
		</dependency>

	</dependencies>

	<developers />
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>

					<descriptors>
						<descriptor>src/assembly/tim2-srv-assembly.xml</descriptor>
					</descriptors>

				</configuration>
				<executions>
					<execution>
						<id>create-assembly-file</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
