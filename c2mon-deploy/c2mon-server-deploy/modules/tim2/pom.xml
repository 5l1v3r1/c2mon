<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>c2mon-server-deploy</artifactId>
    <groupId>cern.c2mon.c2mon-deploy</groupId>
    <version>1.6.2-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <groupId>cern.c2mon.c2mon-deploy</groupId>
  <artifactId>c2mon-srv-tim2</artifactId>
  <name>The TIM2 SRV module</name>
  <version>1.6.2-SNAPSHOT</version>

  <description>C2MON server assembling all required modules and configuration files for TIM2</description>
  <url></url>

  <dependencies>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-cachepersistence</artifactId>
      <version>[1.5.0, 2.0.0)</version>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-benchmark</artifactId>
      <version>[1.5.0, 2.0.0)</version>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-command</artifactId>
      <version>[1.5.0, 2.0.0)</version>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-client</artifactId>
      <version>[1.5.0, 2.0.0)</version>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-video</artifactId>
      <version>[1.5.0, 2.0.0)</version>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-laser</artifactId>
      <version>[1.5.0, 2.0.0)</version>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-shorttermlog</artifactId>
      <version>[1.5.0, 2.0.0)</version>
    </dependency>

    <!-- for distributed cache only -->
    <dependency>
      <groupId>org.terracotta.bigmemory</groupId>
      <artifactId>bigmemory</artifactId>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.terracotta</groupId>
      <artifactId>terracotta-toolkit-runtime-ee</artifactId>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>net.sf.ehcache</groupId>
      <artifactId>ehcache-ee</artifactId>
      <scope>runtime</scope>
    </dependency>


    <!-- for logging -->
    <dependency>
      <groupId>cern.cmw</groupId>
      <artifactId>cmw-log-log4j</artifactId>
      <scope>runtime</scope>
      <version>[1.5.8, 2.0.0)</version>
    </dependency>

    <!--
      Allows exposing the JMX interface to DIAMON
    -->
    <dependency>
        <groupId>cern.accsoft.commons</groupId>
        <artifactId>accsoft-commons-jmxdirectory-registration</artifactId>
        <version>[1.1.7, 2.0.0)</version>
    </dependency>
  </dependencies>

  <developers />
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>

          <descriptors>
            <descriptor>src/assembly/tim2-srv-assembly.xml</descriptor>
          </descriptors>

        </configuration>
        <executions>
          <execution>
            <id>create-assembly-file</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
