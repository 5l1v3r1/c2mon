<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
  
  <!-- This file configures the (optional) modules that should be started at runtime -->
  
  <!-- Included any required properties that should be loaded into the Spring context for use by the modules -->
  
  <!-- Import a single XML configuration for each (optional) server module (the order is of no importance) -->
  <!-- If required, the file can be located in the server configuration directory (so not in the classpath) -->
  <import resource="classpath:cern/c2mon/server/cachepersistence/config/server-cachepersistence.xml"/>
  <import resource="classpath:cern/c2mon/server/command/config/server-command.xml"/>
  <import resource="classpath:cern/c2mon/server/benchmark/config/server-benchmark.xml"/>
  <import resource="classpath:cern/c2mon/server/alarm/config/server-alarm.xml"/>
  <import resource="classpath:cern/c2mon/server/shorttermlog/config/server-shorttermlog.xml"/>
  <import resource="classpath:cern/c2mon/server/client/config/server-client.xml"/>
  <import resource="classpath:cern/c2mon/server/laser/config/server-laser.xml"/>
  <import resource="classpath:cern/c2mon/server/video/config/server-video.xml"/>
  
  <!-- Elastic Search  persistence module
   <import resource="classpath:cern/c2mon/server/eslog/config/server-eslog.xml"/>
   -->

  <!--
    Triggers JMX export through RMI on a random port with default access
    configuration. To export on a specific port add this argument when starting
    process. -Dmgt.jmx.port=1234. Replace 1234 with your favourite port number.
  -->
  <bean id="jmxBootstrap" class="cern.accsoft.commons.jmxdirectory.client.JmxBootstrap">
      <!-- The name of the process that exposes the JMX interface -->
      <constructor-arg value="${c2mon.process.name}" />
  </bean>
</beans>
