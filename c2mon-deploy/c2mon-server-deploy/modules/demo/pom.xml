<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>c2mon-server-deploy</artifactId>
    <groupId>cern.c2mon.c2mon-deploy</groupId>
    <version>1.7.0</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <groupId>cern.c2mon.c2mon-deploy</groupId>
  <artifactId>c2mon-srv-demo</artifactId>
  <name>The C2MON demo module</name>
  <version>1.7.0</version>

  <description>C2MON server assembling all required modules and configuration files for the C2MON demo version</description>
  <url></url>

  <dependencies>
    <!-- C2MON modules -->
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-all</artifactId>
      <exclusions>
        <exclusion>
          <artifactId>ojdbc</artifactId>
          <groupId>com.oracle</groupId>
        </exclusion>
        <exclusion>
          <artifactId>orai18n</artifactId>
          <groupId>com.oracle</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-cachepersistence</artifactId>
      <version>[1.5.0, 2.0.0)</version>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-command</artifactId>
      <version>[1.5.0, 2.0.0)</version>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-shorttermlog</artifactId>
      <version>[1.5.0, 2.0.0)</version>
      <exclusions>
        <exclusion>
          <artifactId>ojdbc</artifactId>
          <groupId>com.oracle</groupId>
        </exclusion>
        <exclusion>
          <artifactId>orai18n</artifactId>
          <groupId>com.oracle</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-client</artifactId>
      <version>[1.5.0, 2.0.0)</version>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-test</artifactId>
      <scope>runtime</scope>
    </dependency>

    <!-- 3rd party dependencies -->
    <dependency>
      <groupId>org.hsqldb</groupId>
      <artifactId>hsqldb</artifactId>
      <version>2.3.2</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>net.sf.ehcache</groupId>
      <artifactId>ehcache-core</artifactId>
      <scope>runtime</scope>
    </dependency>
  </dependencies>


  <developers />
  <build>
    <plugins>

      <!-- Used to extract the sql schemas from c2mon-server-test -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack-dependencies</id>
            <phase>package</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <excludeArtifactIds>*</excludeArtifactIds>
              <includeArtifactIds>c2mon-server-test</includeArtifactIds>
              <includes>cern/c2mon/server/test/sql/*-schema-generic.sql, cern/c2mon/server/test/sql/config-data.sql</includes>
              <outputDirectory>${project.build.directory}/conf/sql</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>

          <descriptors>
            <descriptor>src/assembly/demo-srv-assembly.xml</descriptor>
          </descriptors>

        </configuration>
        <executions>
          <execution>
            <id>create-assembly-file</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>license-maven-plugin</artifactId>
        <version>1.8</version>
        <executions>
          <execution>
            <id>add-third-party</id>
            <goals>
              <goal>add-third-party</goal>
            </goals>
            <configuration>
              <excludedGroups>cern.c2mon.c2mon-server</excludedGroups>
              <excludedArtifacts>ojdbc|orai18n</excludedArtifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <reporting>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>license-maven-plugin</artifactId>
        <version>1.8</version>
        <reportSets>
          <reportSet>
            <reports>
              <report>third-party-report</report>
            </reports>
          </reportSet>
        </reportSets>
      </plugin>
    </plugins>
  </reporting>
</project>
