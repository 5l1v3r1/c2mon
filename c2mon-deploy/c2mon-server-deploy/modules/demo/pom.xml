<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>c2mon-server-deploy</artifactId>
		<groupId>cern.c2mon.c2mon-deploy</groupId>
		<version>1.3.1</version>
		<relativePath>../../pom.xml</relativePath>
	</parent>

	<groupId>cern.c2mon.c2mon-deploy</groupId>
	<artifactId>c2mon-srv-demo</artifactId>
	<name>The C2MON demo module</name>
	<version>1.3.1</version>

	<description>C2MON server assembling all required modules and configuration files for the C2MON demo version</description>
	<url></url>

	<dependencies>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-common</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-cache</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-cacheloading</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-cachedbaccess</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-cachepersistence</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-benchmark</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-command</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-daqcommunication-in</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-daqcommunication-out</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-rule</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-supervision</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-configuration</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-lifecycle</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-client</artifactId>
			<version>[1.0.0,2.0.0)</version>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-video</artifactId>
			<version>[1.0.0,2.0.0)</version>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-server</groupId>
			<artifactId>c2mon-server-test</artifactId>
			<scope>runtime</scope>
		</dependency>

	</dependencies>

	<developers />
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>

					<descriptors>
						<descriptor>src/assembly/demo-srv-assembly.xml</descriptor>
					</descriptors>

				</configuration>
				<executions>
					<execution>
						<id>create-assembly-file</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

</project>
