<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>c2mon-server-deploy</artifactId>
    <groupId>cern.c2mon.c2mon-deploy</groupId>
    <version>1.5.8-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <groupId>cern.c2mon.c2mon-deploy</groupId>
  <artifactId>c2mon-srv-demo</artifactId>
  <name>The C2MON demo module</name>
  <version>1.5.8-SNAPSHOT</version>

  <description>C2MON server assembling all required modules and configuration files for the C2MON demo version</description>
  <url></url>

  <dependencies>
    <!-- C2MON modules -->
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-cachepersistence</artifactId>
      <version>[1.5.0, 2.0.0)</version>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-command</artifactId>
      <version>[1.5.0, 2.0.0)</version>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-shorttermlog</artifactId>
      <version>[1.5.0, 2.0.0)</version>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-client</artifactId>
      <version>[1.5.0, 2.0.0)</version>
    </dependency>
    <dependency>
      <groupId>cern.c2mon.c2mon-server</groupId>
      <artifactId>c2mon-server-test</artifactId>
      <scope>runtime</scope>
    </dependency>
    
    <!-- 3rd party dependencies -->
    <dependency>
      <groupId>org.hsqldb</groupId>
      <artifactId>hsqldb</artifactId>
      <version>2.3.2</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>net.sf.ehcache</groupId>
      <artifactId>ehcache-core</artifactId>
      <scope>runtime</scope>
    </dependency>
  </dependencies>
  

  <developers />
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>

          <descriptors>
            <descriptor>src/assembly/demo-srv-assembly.xml</descriptor>
          </descriptors>

        </configuration>
        <executions>
          <execution>
            <id>create-assembly-file</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>

</project>
