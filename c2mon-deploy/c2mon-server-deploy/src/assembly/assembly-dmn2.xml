<?xml version="1.0" encoding="UTF-8"?>
<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>dmn2</id>

  <formats>
    <format>tar.gz</format>
  </formats>

  <!--  do not include base directory -->
  <includeBaseDirectory>false</includeBaseDirectory>

  <componentDescriptors>
    <componentDescriptor>src/assembly/assembly-common.xml
    </componentDescriptor>
  </componentDescriptors>

  <files>

    <!-- deployment descriptor -->
    <file>
      <source>${basedir}/conf/deployment.xml</source>
      <outputDirectory>/</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>

    <!-- log4j configuration -->
    <!-- don't take log4j configuration. it will be put in correct place by
      deployment tool -->
    <!-- <file> -->
    <!-- <source>${basedir}/conf/dmn2-log4j.xml</source> -->
    <!-- <outputDirectory>conf/</outputDirectory> -->
    <!-- <destName>log4j.xml</destName> -->
    <!-- <lineEnding>unix</lineEnding> -->
    <!-- <fileMode>0444</fileMode> -->
    <!-- </file> -->

    <!-- copy the license file for Terracotta -->
    <file>
      <source>${basedir}/conf/terracotta-license.key</source>
      <outputDirectory>conf/</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>

    <!-- copy the version file -->
    <file>
      <source>${project.build.outputDirectory}/version.txt</source>
      <outputDirectory>/</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>

  </files>

</assembly>
