<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>dipcm</id>

  <formats>
    <format>tar.gz</format>
  </formats>

  <!-- do not include base directory -->
  <includeBaseDirectory>false</includeBaseDirectory>

  <componentDescriptors>
    <componentDescriptor>src/assembly/c2mon-srv-common-assembly.xml
    </componentDescriptor>
  </componentDescriptors>

  <files>
    <!-- Copy configuration files -->
    <file>
      <source>${basedir}/conf/dipcm-log4j.xml</source>
      <outputDirectory>conf/</outputDirectory>
      <destName>log4j.xml</destName>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>
    <file>
      <source>${basedir}/conf/dipcm-modules.xml</source>
      <outputDirectory>conf/</outputDirectory>
      <destName>c2mon-modules.xml</destName>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>
    <file>
      <source>${basedir}/conf/dipcm-datasource.xml</source>
      <outputDirectory>conf/</outputDirectory>
      <destName>c2mon-datasource.xml</destName>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>
    <file>
      <source>${basedir}/conf/dipcm-c2mon.properties</source>
      <outputDirectory>conf/</outputDirectory>
      <destName>c2mon.properties</destName>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>

    <!-- copy the version file -->
    <file>
      <source>${project.build.outputDirectory}/version.txt</source>
      <outputDirectory>/</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>
    
    <!-- copy the Third Party license file -->
    <file>
      <source>${project.build.outputDirectory}/THIRD-PARTY.txt</source>
      <outputDirectory>/</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>

  </files>
  
  <fileSets>
    <!-- copy the start scripts -->
    <fileSet>
      <outputDirectory>/bin</outputDirectory>
      <includes>
        <include>*</include>
      </includes>
      <directory>bin/</directory>
      <fileMode>0755</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    
    <!-- Copy SQL files -->
    <fileSet>
      <includes>
        <include>*</include>
      </includes>
      <directory>${basedir}/conf/sql/</directory>
      <outputDirectory>conf/sql</outputDirectory>
      <fileMode>0444</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <fileSet>
      <includes>
        <include>*</include>
      </includes>
      <directory>${project.build.directory}/conf/sql/cern/c2mon/server/test/sql/</directory>
      <outputDirectory>conf/sql</outputDirectory>
      <fileMode>0444</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
  </fileSets>

</assembly>
