<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>tim2</id>

  <formats>
    <format>tar.gz</format>
  </formats>

  <!-- do not include base directory -->
  <includeBaseDirectory>false</includeBaseDirectory>

  <componentDescriptors>
    <componentDescriptor>src/assembly/assembly-common.xml</componentDescriptor>
  </componentDescriptors>

  <files>
    <!-- copy the start script -->
    <file>
      <source>${basedir}/bin/c2mon.sh</source>
      <outputDirectory>bin/</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0755</fileMode>
    </file>

    <!-- deployment descriptor -->
    <file>
      <source>${basedir}/conf/deployment.xml</source>
      <outputDirectory>/</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>

    <!-- logging configuration -->
    <file>
      <source>${basedir}/conf/logback.xml</source>
      <outputDirectory>conf/</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0644</fileMode>
    </file>

    <!-- copy the license file for Terracotta -->
    <file>
      <source>${basedir}/conf/terracotta-license.key</source>
      <outputDirectory>conf/</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>

    <!-- copy the version file -->
    <file>
      <source>${project.build.outputDirectory}/version.txt</source>
      <outputDirectory>/</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>

  </files>

</assembly>
