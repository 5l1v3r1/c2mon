<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>cern.c2mon.c2mon-deploy</groupId>
    	<artifactId>c2mon-consumer-deploy</artifactId>
    	<version>1.0.1</version>
		<relativePath>../../pom.xml</relativePath>
	</parent>

	<groupId>cern.c2mon.c2mon-deploy</groupId>
	<artifactId>c2mon-consumer-dmn2</artifactId>
	<name>The DMN2 DAQ statistics consumer module</name>
	<version>1.0.1</version>
	<packaging>pom</packaging>

	<description>Deployment module for the DIAMON instance of the C2MON statistics consumer application.</description>

	<dependencies>
		<dependency>
			<groupId>cern.c2mon.c2mon-statistics</groupId>
			<artifactId>c2mon-statistics-consumer</artifactId>
			<version>[1.0.0,2.0.0)</version>
		</dependency>		
	</dependencies>

	<developers />
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>

					<descriptors>
						<descriptor>src/assembly/dmn2-consumer-assembly.xml</descriptor>
					</descriptors>

				</configuration>
				<executions>
					<execution>
						<id>create-assembly-file</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>