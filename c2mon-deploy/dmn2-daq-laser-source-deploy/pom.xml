<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>cern.c2mon.c2mon-daq</groupId>
		<artifactId>c2mon-daq-pom</artifactId>
		<version>1.5.0</version>
	</parent>

	<groupId>cern.dmn2.dmn2-daq</groupId>
	<artifactId>dmn2-daq-laser-source-deploy</artifactId>
	<name>DMN2 LASER SOURCE daq deployment</name>
	<version>1.0.0-SNAPSHOT</version>

	<description>DMN2 LASER SOURCE DAQ takes natives alarms and changes dataTags values with the description of the alarms (active or terminate)</description>

	<scm>
		<developerConnection>scm:svn:svn+ssh://svn.cern.ch/reps/tim2/trunk/c2mon/c2mon-deploy/dmn2-daq-lasers-source-deploy</developerConnection>
	</scm>

	<dependencies>

		<dependency>
			<groupId>cern.c2mon.c2mon-daq</groupId>
			<artifactId>c2mon-daq-laser-source</artifactId>			
			<version>[1.0.0,2.0.0)</version>
			<exclusions>
			        <!--
				<exclusion>
					<groupId>cern.japc</groupId>
					<artifactId>japc-ext-yami</artifactId>
				</exclusion>
				-->
			</exclusions>
		</dependency>


	</dependencies>

	<build>
		<plugins>

			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor>src/assembly/assembly.xml</descriptor>
					</descriptors>

				</configuration>
				<executions>
					<execution>
						<id>create-assembly-file</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
		
	</build>

</project>
