<?xml version="1.0" encoding="UTF-8"?>
<products>
	<product name="dmn2-daq-native-laser">

		<!-- this application section is a parent configuration for both PROD and TEST -->
		<application>
			<startscript>
				<main-class name="cern.c2mon.daq.common.startup.DaqStartup">
					<arg>-processName ${PROCESS_NAME} -noDeadband</arg>
					<output>
						<file name="${DAQ_LOG_HOME}/${PROCESS_NAME}.out.log" />
					</output>
				</main-class>
				<java-vm-args>-Xms1G -Xmx1G -XX:+UseParallelGC -XX:MaxGCPauseMillis=100</java-vm-args>
			</startscript>
		</application>

		<application name="dmn2-daq-laser-source">

			<deployment installLocation="/opt/dmn2/dmn2-daq/dmn2-daq-laser-source">
				<directory name="conf">
					<file name="c2mon.properties" source="~diamonop/c2mon/daq/daq.properties" mask="400" />					
					<file name="log4j.xml" sourceDir="~diamonop/c2mon/daq" mask="444" />
					
				</directory>
				<notification>
					<mail address="diamon-developers@cern.ch" />
				</notification>
			</deployment>
			
			<startscript name="DMN2-DAQ-LASER-SOURCE">
				<env name="PROCESS_NAME" value="P_ALARM" />
			</startscript>
		</application>

		<application name="dmn2-daq-laser-source-dev">
			<deployment installLocation="/opt/dmn2/dmn2-daq/dmn2-daq-laser-source-dev">
				<directory name="conf">
					<file name="c2mon.properties" source="~dmndev/c2mon/daq/daq.properties" mask="400" />
					<file name="log4j.xml" sourceDir="~dmndev/c2mon/daq" mask="444" />
					
				</directory>
			</deployment>
			
			<startscript name="DMN2-DAQ-LASER-ELEC">
				<env name="PROCESS_NAME" value="P_ALARM_ELEC" />
			</startscript>
			<startscript name="DMN2-DAQ-LASER-MISC">
				<env name="PROCESS_NAME" value="P_ALARM_MISC" />
			</startscript>
			<startscript name="DMN2-DAQ-LASER-POFGC">
				<env name="PROCESS_NAME" value="P_ALARM_POFGC" />
			</startscript>
			<startscript name="DMN2-DAQ-LASER-TIMOP">
				<env name="PROCESS_NAME" value="P_ALARM_TIMOP" />
			</startscript>
			<startscript name="DMN2-DAQ-LASER-VACUUM">
				<env name="PROCESS_NAME" value="P_ALARM_VACUUM" />
			</startscript>
		</application>

	</product>
</products>