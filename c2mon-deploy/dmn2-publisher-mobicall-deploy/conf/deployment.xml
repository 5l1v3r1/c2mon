<products>
	<product name="c2mon-publisher-mobicall">

		<!-- Application template, not for installation -->
		<application>
			<deployment installLocation="/opt/tim2-mobicall">
				<backupPolicy keepBackups="2">
					<preserve type="dir" name="log" />
					<preserve type="dir" name="conf" />
				</backupPolicy>
			</deployment>
			<startscript>
				<initial-heap-size>128M</initial-heap-size>
				<max-heap-size>128M</max-heap-size>
				<property name="jmx.mgt.port" value="1095" />
				<property name="log4j.configuration" value="file:conf/log4j.properties" />
				<main-class name="cern.c2mon.publisher.mobicall.MobicallAlarmsMain" />
			</startscript>
			<startscript>
				<initial-heap-size>128M</initial-heap-size>
				<max-heap-size>128M</max-heap-size>
			</startscript>
		</application>


