<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>demo</id>

  <formats>
    <format>tar.gz</format>
  </formats>

  <!-- do not include base directory -->
  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
  
    <!-- create default bin and tmp folders in the assembly -->
    <fileSet>
      <includes>
        <include>/bin</include>
        <include>/log</include>
        <include>/tmp</include>
        <include>/conf/local</include>
      </includes>
      <fileMode>0755</fileMode>
    </fileSet>

    <!-- Copy all jars which are needed for running the DAQ modules -->
    <fileSet>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
      <fileMode>0444</fileMode>
      <directoryMode>0755</directoryMode>
      <directory>${project.build.directory}/lib/</directory>
    </fileSet>
  </fileSets>

  <files>
  
  <!--  copy the starting script -->
  <file>
    <source>bin/daqprocess.sh</source>
    <outputDirectory>bin/</outputDirectory>
    <lineEnding>unix</lineEnding>
    <fileMode>0755</fileMode>
  </file>
  
  <file>
    <source>bin/C2MON-DAQ-STARTUP.jvm</source>
    <outputDirectory>bin/</outputDirectory>
    <lineEnding>unix</lineEnding>
    <fileMode>0755</fileMode>
  </file>
  
  <file>
    <source>README.txt</source>
    <outputDirectory>/</outputDirectory>
    <lineEnding>unix</lineEnding>
    <fileMode>0444</fileMode>
  </file>
  
  <!--  copy daq conf files --> 
  <file>
    <source>conf/local/P_TESTHANDLER03-demo.xml</source>
    <outputDirectory>conf/local/</outputDirectory>
    <destName>P_TESTHANDLER03.xml</destName>
    <lineEnding>unix</lineEnding>
    <fileMode>0444</fileMode>
  </file>
  
  <file>
    <source>conf/local/P_TESTHANDLER04-demo.xml</source>
    <outputDirectory>conf/local/</outputDirectory>
    <destName>P_TESTHANDLER04.xml</destName>
    <lineEnding>unix</lineEnding>
    <fileMode>0444</fileMode>
  </file>

    <!-- log4j configuration -->
    <file>
      <source>conf/demo-log4j.xml</source>
      <outputDirectory>conf/</outputDirectory>
      <destName>log4j.xml</destName>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>
    
    <!-- properties -->
    <file>
      <source>conf/demo-c2mon.properties</source>
      <outputDirectory>conf/</outputDirectory>
      <destName>c2mon.properties</destName>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>
    
    <file>
      <source>conf/demo-daq.conf</source>
      <outputDirectory>conf/</outputDirectory>
      <destName>daq.conf</destName>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>

    <!-- copy the version file -->
    <file>
      <source>${project.build.outputDirectory}/version.txt</source>
      <outputDirectory>/</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>

  </files>

</assembly>
