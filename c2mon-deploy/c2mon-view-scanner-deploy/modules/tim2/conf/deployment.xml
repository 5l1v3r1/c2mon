<?xml version="1.0" encoding="UTF-8"?>
<products>
  <product name="c2mon">

    <!--
			this application section is a parent configuration for both
			c2mon-tim2-prod and c2mon-tim2-test
		-->
    <application name="default">
      <deployment installLocation="/opt/tim-view-scanner">
        <backupPolicy keepBackups="1" />
        <directory name="conf">
          <!-- Copy over the c2mon.properties file into the /conf directory  -->
          <file name="c2mon-client.properties" sourceDir="/user/timoper/rep/c2mon/client" mask="400" />
        </directory>
      </deployment>
      <startscript>
        <!-- VM arguments -->
        <initial-heap-size>1024m</initial-heap-size>
        <max-heap-size>1024m</max-heap-size>
        <main-class name="cern.tim.client.scanner.Main" />

        <!-- JVM environment variables -->
        <!-- No graphical output is wished -->
        <property name="java.awt.headless" value="true" />
        <property name="logging.config" value="${INSTALL_DIR}/conf/log4j.xml" />
        <property name="tim.log.path" value="${INSTALL_DIR}/log" />
        <property name="c2mon.client.conf.url" value="file://${INSTALL_DIR}/conf/c2mon-client.properties" />
        <!-- Defines which local directory should be scanned for views -->
        <property name="tim.scanner.views.root.dir" value="/user/timoper/dist/Views/Production" />
        <!-- 
          Defines the URL root which should replace the local root directory path for storing 
          the name into the database 
        -->
        <property name="tim.scanner.views.home.url" value="http://timweb/Views/Production" />
      </startscript>
    </application>

    <application name="tim-view-scanner-pro" extends="default">

      <startscript name="tim-view-scanner">
        <property name="tim.scanner.servlet.home.url" value="https://oraweb.cern.ch/pls/timw3/TIMVIEWS_TRACK." />
      </startscript>

      <deployment installLocation="/opt/tim-view-scanner">
        <notification>
          <!-- you can give more than one mail for deployment notification -->
          <mail address="tim-admin@cern.ch" />
        </notification>
      </deployment>
    </application>

    <application name="tim-view-scanner-test" extends="default">

      <startscript name="tim-view-scanner-test">
        <property name="tim.scanner.servlet.home.url" value="https://oraweb.cern.ch/pls/timw3_test/TIMVIEWS_TRACK." />
      </startscript>

      <deployment installLocation="/opt/tim-view-scanner-test" />
    </application>
  </product>
</products>