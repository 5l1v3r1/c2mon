<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>cern.c2mon.c2mon-deploy</groupId>
    <artifactId>c2mon-publisher-dip-deploy</artifactId>
    <version>1.1.0-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <groupId>cern.c2mon.c2mon-deploy</groupId>
  <artifactId>c2mon-publisher-dip-tim2</artifactId>
  <name>The TIM2 DIP Publisher module</name>
  <version>1.1.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <description>C2MON DIP publisher assembling all required modules and configuration files for TIM2</description>
  <url></url>

  <dependencies>
  </dependencies>

  <developers />
  <scm>
    <developerConnection>scm:svn:svn+ssh://svn.cern.ch/reps/tim2/trunk/c2mon/c2mon-deploy/c2mon-publisher-dip-deploy/modules/tim2</developerConnection>
  </scm>
  <build>
    <plugins>
      <!-- Unpack native libraries -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.2</version>
        <executions>
          <execution>
            <id>unpack</id>
            <phase>compile</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <artifactItems>
            <artifactItem>

              <groupId>cern.dip</groupId>
              <artifactId>dip-shared</artifactId>
              <classifier>i386-Linux-gpp-shared</classifier>
              <version>5.4.3</version>
              <type>nar</type>

              <overWrite>true</overWrite>
              <outputDirectory>${project.build.directory}/lib_so</outputDirectory>
            </artifactItem>
          </artifactItems>
        </configuration>
      </plugin>

      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>

          <descriptors>
            <descriptor>src/assembly/tim2-dippublisher-assembly.xml</descriptor>
          </descriptors>

        </configuration>
        <executions>
          <execution>
            <id>create-assembly-file</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
