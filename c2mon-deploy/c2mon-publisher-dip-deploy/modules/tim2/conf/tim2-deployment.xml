<?xml version="1.0" encoding="UTF-8"?>
<products>
  <product name="c2mon">

    <!--
			this application section is a parent configuration for both
			c2mon-tim2-prod and c2mon-tim2-test
		-->
    <application name="default">
      <deployment installLocation="/opt/tim-publisher-dip/">
        <backupPolicy keepBackups="2">
          <preserve type="dir" name="log" />
          <preserve type="dir" name="tmp" />
          <preserve type="file" name="conf/DIPPub01.tid" />
          <preserve type="file" name="conf/DIPPub02.tid" />
        </backupPolicy>
      </deployment>
      <startscript name="dip-publisher-startup">
        <preExec>
          <![CDATA[
[[ -z $PROCESS_NAME ]] && echo "PROCESS_NAME not set!" && exit 1
           ]]>
        </preExec>
        <initial-heap-size>256m</initial-heap-size>
        <max-heap-size>256m</max-heap-size>
        
        <main-class name="cern.c2mon.publisher.core.PublisherKernel" />
        
        <!-- JVM environment variables -->
        <property name="c2mon.publisher.dip.server.name" value="${PROCESS_NAME}" />
        <property name="c2mon.publisher.tid.location" value="${INSTALL_DIR}/conf/${PROCESS_NAME}.tid" />
        <property name="log4j.configuration" value="${INSTALL_DIR}/conf/log4j.xml" />
        <property name="tim.log.path" value="${INSTALL_DIR}/log" />
        <property name="java.library.path" value="${INSTALL_DIR}/lib_so" />
        <property name="c2mon.client.conf.url" value="file://${INSTALL_DIR}/conf/c2mon-client.properties" />
      </startscript>
    </application>

    <application name="tim-publisher-dip-prod" extends="default">
      <!-- Setting DIP environment variables  -->
      <env name="DIPNS" value="dipns1,dipns2" />
      <env name="DIM_DNS_NODE" value="dipns1,dipns2" />
      <env name="DIM_DNS_PORT" value="2506" />
      
      <deployment installLocation="/opt/tim-publisher-dip">
        <notification>
          <!-- you can give more than one mail for deployment notification -->
          <mail address="tim-admin@cern.ch" />
        </notification>
        <directory name="conf">
          <!-- Copy over the c2mon.properties file into the /conf directory  -->
          <file name="c2mon-client.properties" sourceDir="/user/timoper/rep/c2mon/client" mask="400" />
        </directory>
      </deployment>
    </application>

    <application name="tim-publisher-dip-test" extends="default">
      <!-- Setting DIP environment variables to test DIM DNS -->
      <env name="DIPNS" value="tim2" />
      <env name="DIM_DNS_NODE" value="tim2" />
      <env name="DIM_DNS_PORT" value="2506" />
      
      <deployment installLocation="/opt/tim-publisher-dip-test">
        <directory name="conf">
          <!-- Copy over the c2mon.properties file into the /conf directory  -->
          <file name="c2mon-client.properties" sourceDir="/user/timoper/rep/c2mon/client" mask="400" />
        </directory>
      </deployment>
    </application>
  </product>
</products>