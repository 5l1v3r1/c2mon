<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>tim2</id>

  <formats>
    <format>tar.gz</format>
  </formats>

  <!--  do not include base directory -->
  <includeBaseDirectory>false</includeBaseDirectory>

  <componentDescriptors>
    <componentDescriptor>src/assembly/c2mon-dippublisher-common-assembly.xml
		</componentDescriptor>
  </componentDescriptors>

  <files>

    <!--  copy the starting scripts -->
    <file>
      <source>${basedir}/bin/dip-publisher.sh</source>
      <outputDirectory>bin/</outputDirectory>
      <destName>dip-publisher.sh</destName>
      <lineEnding>unix</lineEnding>
      <fileMode>0755</fileMode>
    </file>

    <!-- copy update script -->
    <file>
      <source>${basedir}/bin/update-config.sh</source>
      <outputDirectory>bin/</outputDirectory>
      <destName>update-config.sh</destName>
      <lineEnding>unix</lineEnding>
      <fileMode>0755</fileMode>
    </file>
    <!--  deployment descriptor -->
    <file>
      <source>${basedir}/conf/tim2-deployment.xml</source>
      <outputDirectory>/</outputDirectory>
      <destName>deployment.xml</destName>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>

    <!--  copy TID files to which the DIP publishers have to subscribe -->
    <file>
      <source>${basedir}/conf/DIPPub01.tid</source>
      <outputDirectory>conf/</outputDirectory>
      <destName>DIPPub01.tid</destName>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>

    <file>
      <source>${basedir}/conf/DIPPub02.tid</source>
      <outputDirectory>conf/</outputDirectory>
      <destName>DIPPub02.tid</destName>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>

    <!--  log4j configuration -->
    <file>
      <source>${basedir}/conf/log4j.xml</source>
      <outputDirectory>conf/</outputDirectory>
      <destName>log4j.xml</destName>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>
  </files>

</assembly>
