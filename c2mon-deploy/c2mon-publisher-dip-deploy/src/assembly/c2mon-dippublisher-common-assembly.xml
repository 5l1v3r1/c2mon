<component xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.2 http://maven.apache.org/xsd/component-1.1.2.xsd">

  <dependencySets>

    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}
			</outputFileNameMapping>
      <fileMode>0644</fileMode>
    </dependencySet>

  </dependencySets>

  <fileSets>

    <!-- create default tmp and log folders in the assembly -->
    <fileSet>
      <includes>
        <include>tmp/</include>
      </includes>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <includes>
        <include>log/</include>
      </includes>
      <fileMode>0755</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <!-- take the native libraries and copy them to /lib_so -->
    <fileSet>
      <outputDirectory>/lib_so</outputDirectory>
      <includes>
        <include>*.so*</include>
      </includes>
      <directory>${dip.native.libs.dir.abs}</directory>
      <fileMode>0444</fileMode>
    </fileSet>
    <fileSet>
      <outputDirectory>/lib_so</outputDirectory>
      <includes>
        <include>*</include>
      </includes>
      <directory>${project.build.directory}/lib_so/lib/i386-Linux-gpp/shared
      </directory>
      <fileMode>0444</fileMode>
    </fileSet>
  </fileSets>

</component>