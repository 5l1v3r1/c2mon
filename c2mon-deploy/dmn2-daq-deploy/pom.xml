<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>cern.tim2.tim2-daq</groupId>
		<artifactId>tim2-daq-pom</artifactId>
		<version>1.0.7</version>
	</parent>

	<groupId>cern.dmn2.dmn2-daq</groupId>
	<artifactId>dmn2-daq-deploy</artifactId>
	<name>DMN2 DAQ deployment module</name>
	<version>1.0.8</version>

	<packaging>pom</packaging>

	<description>
		DMN2 DAQ assembling all required modules and configuration files for DMN2
        </description>
	<url></url>

	<scm>
		<developerConnection>scm:svn:svn+ssh://svn.cern.ch/reps/tim2/trunk/c2mon/c2mon-deploy/dmn2-daq-deploy</developerConnection>
	</scm>

	<developers />


	<dependencies>
		<dependency>
			<groupId>cern.tim2.tim2-daq</groupId>
			<artifactId>tim2-daq-core</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-daq</groupId>
			<artifactId>tim2-daq-jmx</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-daq</groupId>
			<artifactId>tim2-daq-japc</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-daq</groupId>
			<artifactId>tim2-daq-testhandler</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-daq</groupId>
			<artifactId>tim2-daq-ssh</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.dmn2.dmn2-daq</groupId>
			<artifactId>dmn2-daq-cmwadmin</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>

			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-resources</id>
						<phase>compile</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.outputDirectory}
							</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}</directory>
									<filtering>true</filtering>
									<includes>
										<include>version.txt</include>
									</includes>
								</resource>
								<resource>
									<directory>${basedir}</directory>
									<filtering>false</filtering>
									<excludes>
										<exclude>version.txt</exclude>
									</excludes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor>src/assembly/assembly.xml</descriptor>
					</descriptors>

				</configuration>
				<executions>
					<execution>
						<id>create-assembly-file</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
