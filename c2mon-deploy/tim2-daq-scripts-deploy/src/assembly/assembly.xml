<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>install</id>

  <formats>
    <format>tar.gz</format>
  </formats>

  <!-- do not include base directory -->
  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
  
    <!-- create default bin and tmp folders in the assembly -->
    <fileSet>
      <includes>
        <include>/bin</include>
        <include>/tmp</include>
        <include>/conf/local</include>
      </includes>
      <fileMode>0755</fileMode>
    </fileSet>

    <!-- Copy all config files which are needed for running the DAQ modules -->
    <fileSet>
      <outputDirectory>/conf</outputDirectory>
      <includes>
        <include>*.lst</include>
      </includes>
      <fileMode>0644</fileMode>
      <lineEnding>unix</lineEnding>
      <directoryMode>0755</directoryMode>
      <directory>/conf</directory>
    </fileSet>
    
    <!-- Copy all scripts -->
    <fileSet>
      <outputDirectory>/bin</outputDirectory>
      <includes>
        <include>*.sh</include>
      </includes>
      <fileMode>0744</fileMode>
      <lineEnding>unix</lineEnding>
      <directoryMode>0755</directoryMode>
      <directory>/bin</directory>
    </fileSet>
  </fileSets>

  <files>
    <!-- deployment descriptor -->
    <file>
      <source>conf/deployment.xml</source>
      <outputDirectory>/</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>

    <!-- copy the version file -->
    <file>
      <source>${project.build.outputDirectory}/version.txt</source>
      <outputDirectory>/</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </file>

  </files>

</assembly>
