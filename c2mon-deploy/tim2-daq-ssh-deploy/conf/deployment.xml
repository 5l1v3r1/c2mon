<?xml version="1.0" encoding="UTF-8"?>
<products>
  <product name="tim2-daq-ssh">

    <!--
			this application section is a parent configuration for both
			tim2-daq-ssh-prod and tim2-daq-ssh-test
		-->
    <application name="default">
      <deployment installLocation="/opt/tim2-daq-ssh">
        <backupPolicy keepBackups="5">
          <preserve type="dir" name="tmp" />
          <preserve type="dir" name="log" />
          <preserve type="dir" name="conf/local" />
        </backupPolicy>       
      </deployment>
      <startscript>
        <main-class name="cern.c2mon.daq.common.startup.DaqStartup">
          <arg>-c2monProperties ${C2MON_PROPERTIES_FILE} -log4j ${LOG4J_CONF_FILE} -daqConf ${DAQ_CONF_HOME}/daq.conf -processName ${PROCESS_NAME} ${ADDITIONAL_PARAMS}</arg>
        </main-class>
        <initial-heap-size>256m</initial-heap-size>
        <max-heap-size>256m</max-heap-size>
        <property name="c2mon.process.name" value="$PROCESS_NAME" />
        <property name="c2mon.log.dir" value="$DAQ_LOG_HOME" />
        <property name="java.security.egd" value="file:///dev/urandom" />
        <preExec>
                    <![CDATA[
                      [[ -z $C2MON_PROPERTIES_FILE ]] && echo "C2MON_PROPERTIES_FILE not set!" && exit 1
                      [[ -z $LOG4J_CONF_FILE ]] && echo "LOG4J_CONF_FILE not set!" && exit 1
                      [[ -z $DAQ_CONF_HOME ]] && echo "DAQ_CONF_HOME not set!" && exit 1
                      [[ -z $DAQ_LOG_HOME ]] && echo "DAQ_LOG_HOME not set!" && exit 1
                      [[ -z $PROCESS_NAME ]] && echo "PROCESS_NAME not set!" && exit 1
                      [[ -z $ADDITIONAL_PARAMS ]] && echo "ADDITIONAL_PARAMS not set!" && exit 1
                     ]]>
        </preExec>
      </startscript>
    </application>

    <application name="tim2-daq-ssh-prod" extends="default">
      <deployment installLocation="/opt/tim2-daq-ssh">
         <notification>          
          <mail address="tim-admin@cern.ch" />
        </notification>
        <directory name="conf">
          <file name="c2mon.properties" sourceDir="/user/timoper/rep/c2mon/daq" mask="400" />
          <file name="daq.conf" sourceDir="/user/timoper/rep/c2mon/daq" mask="400" />
        </directory>
        <directory name="bin">
          <file name="daqprocess.sh" sourceDir="/user/timoper/rep/c2mon/daq" mask="700" />
        </directory>
      </deployment>
      <startscript name="TIM2-DAQ-STARTUP">
        <main-class name="cern.c2mon.daq.common.startup.DaqStartup">
          <arg>-c2monProperties ${C2MON_PROPERTIES_FILE} -log4j ${LOG4J_CONF_FILE} -daqConf ${DAQ_CONF_HOME}/daq.conf -processName ${PROCESS_NAME} ${ADDITIONAL_PARAMS}</arg>
        </main-class>
        <property name="c2mon.daq.spring.context" value="classpath:resources/daq-core-service-double.xml" />
      </startscript>
    </application>

    <application name="tim2-daq-ssh-test" extends="default">
      <deployment installLocation="/opt/tim2-daq-ssh-test">
        <directory name="conf">
          <file name="c2mon.properties" sourceDir="/user/timtest/rep/c2mon/daq" mask="400" />
          <file name="daq.conf" sourceDir="/user/timtest/rep/c2mon/daq" mask="400" />
        </directory>
        <directory name="bin">
          <file name="daqprocess.sh" sourceDir="/user/timtest/rep/c2mon/daq" mask="700" />
        </directory>
      </deployment>
      <startscript name="TIM2-DAQ-STARTUP">
        <main-class name="cern.c2mon.daq.common.startup.DaqStartup">
          <arg>-c2monProperties ${C2MON_PROPERTIES_FILE} -log4j ${LOG4J_CONF_FILE} -daqConf ${DAQ_CONF_HOME}/daq.conf -processName ${PROCESS_NAME} ${ADDITIONAL_PARAMS}</arg>
        </main-class>
        <property name="c2mon.daq.spring.context" value="classpath:resources/daq-core-service-double.xml" />
      </startscript>
    </application>
  </product>
</products>