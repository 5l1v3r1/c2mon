<?xml version="1.0" encoding="UTF-8"?>
<products>
   <product name="dmn2-daq-jmx">

      <!--
         this application section is a parent configuration for both
         PROD and TEST
      -->
      <application>
      	<deployment>
      		<directory name="conf">
      			<link source="daq.properties" target="c2mon.properties" />
      		</directory>
      	</deployment>
      
         <startscript name="DMN2-DAQ-JMX" >
            <main-class name="cern.c2mon.daq.common.startup.DaqStartup">
               <arg>-processName ${PROCESS_NAME} </arg>
            </main-class>
            <property name="jmx.daq.passwd.file" value="conf/jmx-daq-credentials.txt" />
            <java-vm-args>-Xms256m -Xmx256m -XX:+UseParallelGC -XX:MaxGCPauseMillis=100</java-vm-args>
            <env name="PROCESS_NAME" value="P_JMX" />
         </startscript>
         <startscript name="DMN2-DAQ-JMX_GPN" >
            <main-class name="cern.c2mon.daq.common.startup.DaqStartup">
               <arg>-processName ${PROCESS_NAME} </arg>
            </main-class>
            <property name="jmx.daq.passwd.file" value="conf/jmx-daq-credentials.txt" />
            <java-vm-args>-Xms256m -Xmx256m -XX:+UseParallelGC -XX:MaxGCPauseMillis=100</java-vm-args>
            <env name="PROCESS_NAME" value="P_JMX_GPN" />
         </startscript>
      </application>
      
      
      

      <application name="dmn2-daq-jmx-pro" >
         <deployment installLocation="/opt/dmn2/dmn2-daq/dmn2-daq-jmx">
            <directory name="conf">
               <file name=".jmxremote.passwd" sourceDir="~diamonop/c2mon/daq" mask="400" />
               <file name=".jmxremote.access" sourceDir="~diamonop/c2mon/daq" mask="400" />
               <file name="daq.properties" sourceDir="~diamonop/c2mon/daq/" mask="400" />
               <file name="jmx-daq-credentials.txt" sourceDir="~diamonop/c2mon/daq" mask="400" />
               <file name="log4j.xml" sourceDir="~diamonop/c2mon/daq" mask="444" />
            </directory>
         </deployment>
      </application>

      <application name="dmn2-daq-jmx-dev" >

         <deployment installLocation="/opt/dmn2/dmn2-daq/dmn2-daq-jmx-dev">
            <directory name="conf">
               <file name=".jmxremote.passwd" sourceDir="~dmndev/c2mon/daq" mask="400" />
               <file name=".jmxremote.access" sourceDir="~dmndev/c2mon/daq" mask="400" />
               <file name="jmx-daq-credentials.txt" sourceDir="~dmndev/c2mon/daq" mask="400" />
               <file name="daq.properties" sourceDir="~dmndev/c2mon/daq/" mask="400" />
               <file name="log4j.xml" sourceDir="~dmndev/c2mon/daq" mask="444" />
            </directory>
         </deployment>
      </application>

   </product>
</products>