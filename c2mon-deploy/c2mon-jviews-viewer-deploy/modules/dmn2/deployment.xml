<?xml version="1.0" encoding="UTF-8"?>
<products>
	<product name="dmn2-viewer">

		<application name="default">

			<deployment installLocation="/user/diamondev/public_html/dmn2-viewer">
				<notification>
					<!-- you can give more than one mail for deployment notification -->
					<mail address="project-diamon-core@cern.ch" />
				</notification>
			</deployment>
		</application>

		<application name="dmn2-viewer-prod" extends="default">
			<deployment installLocation="/user/diamonop/public_html/dmn2-viewer">
				<directory name="conf">
					<file name="client.properties" sourceDir="/user/diamonop/c2mon/prod/client"
						mask="400" />
				</directory>
			</deployment>
		</application>

		<application name="dmn2-viewer-dev" extends="default">
			<deployment installLocation="/user/diamondev/public_html/dmn2-viewer">
				<directory name="conf">
					<file name="client.properties" sourceDir="/user/diamononop/c2mon/dev/client"
						mask="400" />
				</directory>
			</deployment>
		</application>

	</product>
</products>