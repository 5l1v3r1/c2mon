<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>cern.tim2.tim2-daq</groupId>
		<artifactId>tim2-daq-pom</artifactId>
		<version>1.0.7</version>
	</parent>

	<groupId>cern.c2mon.c2mon-deploy</groupId>
	<artifactId>tim2-daq-deploy</artifactId>
	<name>TIM2 DAQ deployment module</name>
	<version>1.0.4-SNAPSHOT</version>

	<packaging>pom</packaging>

	<description>
		TIM2 DAQ assembling all required modules and configuration
		files for TIM2
        </description>
	<url></url>

	<developers />

	<dependencies>
		<dependency>
			<groupId>cern.tim2.tim2-daq</groupId>
			<artifactId>tim2-daq-core</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-daq</groupId>
			<artifactId>tim2-daq-jec</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-daq</groupId>
			<artifactId>tim2-daq-dip</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-daq</groupId>
			<artifactId>tim2-daq-ens</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.c2mon.c2mon-daq</groupId>
			<artifactId>c2mon-daq-opcua</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-daq</groupId>
			<artifactId>tim2-daq-laser</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-daq</groupId>
			<artifactId>tim2-daq-diamon</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-daq</groupId>
			<artifactId>tim2-daq-japc</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-daq</groupId>
			<artifactId>tim2-daq-testhandler</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-daq</groupId>
			<artifactId>tim2-daq-ssh</artifactId>
		</dependency>
		<dependency>
			<groupId>cern.tim2.tim2-daq</groupId>
			<artifactId>tim2-daq-db</artifactId>
		</dependency>
	</dependencies>

	<scm>
		<developerConnection>scm:svn:svn+ssh://svn.cern.ch/reps/tim2/trunk/c2mon/c2mon-deploy/tim2-daq-deploy</developerConnection>
	</scm>
	<build>
		<plugins>

			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-resources</id>
						<phase>compile</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.outputDirectory}
							</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}</directory>
									<filtering>true</filtering>
									<includes>
										<include>version.txt</include>
									</includes>
								</resource>
								<resource>
									<directory>${basedir}</directory>
									<filtering>false</filtering>
									<excludes>
										<exclude>version.txt</exclude>
									</excludes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- Unpack native libraries -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.2</version>
				<executions>
					<execution>
						<id>unpack</id>
						<phase>compile</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<artifactItems>
						<artifactItem>

							<groupId>cern.en.ice</groupId>
							<artifactId>dip</artifactId>
							<classifier>i386-SLC5-gpp-shared</classifier>
							<type>nar</type>

							<overWrite>true</overWrite>
							<outputDirectory>${project.build.directory}/lib_so</outputDirectory>
						</artifactItem>
					</artifactItems>
				</configuration>
			</plugin>


			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor>src/assembly/assembly.xml</descriptor>
					</descriptors>

				</configuration>
				<executions>
					<execution>
						<id>create-assembly-file</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
