<config>
   <!-- The display title of the TIM Video Viewer -->
   <property name="video-viewer-title" type="java.lang.String" value="Access PS Doors"/>
   
   <!-- 
     The name of the video system that must also be defined in the database. Due to this
     information it is possible to determine the relevant data tag IDs.
    -->
   <property name="video-system-name" type="java.lang.String" value="PS_TEST_NKF"/>
   
   <!--
     This variable must be set to true, if you want to start the TIM video viewer with VLC.
     By default it is set to false.
   -->
   <property name="vlc-player" type="java.lang.Boolean" value="true"/>
   
   <!-- 
     This variable is only relevant, if the VLC player is used. 
     If the video streams have to be requested through the CERN On-Demand server,
     then you have to set the variable to true.
   -->
   <property name="enable-od-client" type="java.lang.Boolean" value="false" />

   <!--
     The screen width that the application shall take
   -->
   <property name="screen-width" type="java.lang.Integer" value="1180"/>

   <!--
     The screen height that the application shall take
   -->
   <property name="screen-height" type="java.lang.Integer" value="974"/>
</config>
