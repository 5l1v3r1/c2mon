<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>cern.c2mon.docker</groupId>
    <artifactId>web-configviewer</artifactId>
    <packaging>jar</packaging>
    <version>1.7.3-SNAPSHOT</version>
    <name>C2MON Config Viewer Docker Image</name>
    <description>Docker Image for C2MON Web Config Viewer deployment</description>


    <dependencies>
        <dependency>
            <groupId>cern.c2mon.c2mon-client</groupId>
            <artifactId>c2mon-web-configviewer</artifactId>
            <version>${project.version}</version>
            <classifier>dist</classifier>
            <type>tar.gz</type>
        </dependency>
    </dependencies>

    <build>
        <plugins>
        
          <plugin>
             <groupId>org.apache.maven.plugins</groupId>
             <artifactId>maven-dependency-plugin</artifactId>
             <version>2.10</version>
             <executions>
               <execution>
                 <id>unpack</id>
                 <phase>generate-sources</phase>
                 <goals>
                   <goal>unpack</goal>
                 </goals>
                 <configuration>
                   <artifactItems>
                     <artifactItem>
                        <groupId>cern.c2mon.c2mon-client</groupId>
                        <artifactId>c2mon-web-configviewer</artifactId>
                        <version>${project.version}</version>
                        <classifier>dist</classifier>
                        <type>tar.gz</type>
                     </artifactItem>
                   </artifactItems>
                   <outputDirectory>${project.build.directory}/c2mon-${project.version}/web-configviewer</outputDirectory>
                   <overWriteReleases>false</overWriteReleases>
                   <overWriteSnapshots>true</overWriteSnapshots>
                 </configuration>
               </execution>
             </executions>
           </plugin>        
          <plugin>
                <groupId>com.spotify</groupId>
                <artifactId>docker-maven-plugin</artifactId>
                <version>0.4.5</version>
                <executions>
                     <execution>
                       <id>build-image</id>
                       <phase>compile</phase>
                       <goals> <goal>build</goal> </goals>
                     </execution>
                </executions>
                <configuration>
                    <imageName>docker.cern.ch/c2mon-project/${project.artifactId}</imageName>
                    <baseImage>java:8-jdk</baseImage>
                    <server-id>cern-docker</server-id>
                    <workdir>/opt/c2mon/web-configviewer</workdir>
                    <exposes>
                      <expose>8080</expose>
                    </exposes>
                    <runs>
                      <run>chmod 755 /opt/c2mon/web-configviewer/bin/*</run>
                    </runs>
                    <cmd>["bin/webapp.sh","run"]</cmd>
                    <volumes>
                      <volume>/opt/c2mon/web-configviewer/log</volume>
                      <volume>/opt/c2mon/web-configviewer/conf</volume>
                    </volumes>
                    <resources>
                       <resource>
                         <directory>${project.build.directory}/c2mon-${project.version}/web-configviewer</directory>
                         <targetPath>/opt/c2mon/web-configviewer</targetPath>
                       </resource>
                       <resource>
                         <directory>${project.build.directory}/classes/conf</directory>
                         <targetPath>/opt/c2mon/web-configviewer/conf</targetPath>
                       </resource>
                    </resources>
                </configuration>
              </plugin>
        </plugins>

    </build>


    <properties>
    </properties>

</project>
