		<!-- this application section is a parent configuration for both PROD and TEST -->
		<application>
			<startscript>
				<main-class name="cern.c2mon.alarms.archiver.Main">
					<arg></arg>
				</main-class>
				<property name="log4j.configuration" value="file:log4j.xml" />
				<java-vm-args>-Xms384m -Xmx384m -XX:+UseParallelGC -XX:MaxGCPauseMillis=100</java-vm-args>
